{
  "translations": [
    {
      "resource_id": 30,
      "text": "Oletko kuullut sanoman musertavasta tapahtumasta?"
    },
    { "resource_id": 30, "text": "Sinä päivänä toisten kasvot nöyrtyvät;" },
    { "resource_id": 30, "text": "väsyen ja nääntyen" },
    { "resource_id": 30, "text": "he käyvät polttavaan tuleen" },
    { "resource_id": 30, "text": "ja juovat kiehuvasta lähteestä" },
    { "resource_id": 30, "text": "saamatta muuta ruokaa kuin ohdakkeista," },
    { "resource_id": 30, "text": "joka ei lihota eikä vie nälkää. -" },
    { "resource_id": 30, "text": "Samana päivänä toisten kasvot loistavat," },
    { "resource_id": 30, "text": "ja he ovat tyytyväiset ponnisteluihinsa," },
    { "resource_id": 30, "text": "kun saapuvat ylhäisiin puutarhoihin," },
    { "resource_id": 30, "text": "joissa eivät kuule turhuuden sanoja." },
    { "resource_id": 30, "text": "Siellä on pulppuavia lähteitä," },
    { "resource_id": 30, "text": "siellä on korkeita valtaistuimia," },
    { "resource_id": 30, "text": "täysiä maljoja," },
    { "resource_id": 30, "text": "pieluksia pitkin rivein" },
    { "resource_id": 30, "text": "ja levitettyjä mattoja." },
    { "resource_id": 30, "text": "Eivätkö he näe, kuinka pilvet on luotu," },
    { "resource_id": 30, "text": "kuinka taivas on kaartunut korkeaksi," },
    { "resource_id": 30, "text": "kuinka vuoret on pystytetty" },
    { "resource_id": 30, "text": "ja kuinka maa on avaraksi levitetty?" },
    {
      "resource_id": 30,
      "text": "Jatka siis varoituksiasi, sinä olet juuri varoittaja,"
    },
    { "resource_id": 30, "text": "etkä ole heidän kaitsijansa." },
    {
      "resource_id": 30,
      "text": "Mutta sitä, joka kääntää selkänsä ja jää epäuskoonsa,"
    },
    { "resource_id": 30, "text": "Jumala kurittaa suurella kärsimyksellä:" },
    { "resource_id": 30, "text": "totisesti he palaavat Meidän tykömme," },
    { "resource_id": 30, "text": "ja Meille on heidän tili tehtävä." }
  ],
