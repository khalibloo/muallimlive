{
  "translations": [
    {
      "resource_id": 774,
      "text": "Ese inkuru y’ikizatwikira (abantu ku munsi w’imperuka) yakugezeho?"
    },
    {
      "resource_id": 774,
      "text": "Kuri uwo munsi, uburanga bwa bamwe buzaba busuzuguritse,"
    },
    {
      "resource_id": 774,
      "text": "(Igihe bari ku isi) babaga bakora bashishikaye (basenga ibindi bitari Allah), (ariko ku mperuka) bazaba bananiwe (kandi bafite ikimwaro)."
    },
    { "resource_id": 774, "text": "Bazajya mu muriro utwika (bawuhiremo);" },
    {
      "resource_id": 774,
      "text": "Kandi bazanyweshwa ku isoko (y’amazi) yatuye,"
    },
    {
      "resource_id": 774,
      "text": "Nta byo kurya bazaba bafite uretse ibyatsi birura kandi bifite amahwa,"
    },
    {
      "resource_id": 774,
      "text": "(Ibyo byo kurya) ntibizigera bibabyibushya cyangwa ngo bibamare inzara."
    },
    {
      "resource_id": 774,
      "text": "Kuri uwo munsi kandi (ubundi) buranga buzaba bukeye;"
    },
    { "resource_id": 774, "text": "Bwishimiye ibikorwa byabwo," },
    {
      "resource_id": 774,
      "text": "(Ba nyirabwo bazaba bari) mu Ijuru ry’ikirenga,"
    },
    { "resource_id": 774, "text": "Aho batazumva amanjwe," },
    { "resource_id": 774, "text": "Hazaba harimo isoko itemba," },
    { "resource_id": 774, "text": "Hazaba harimo ibitanda byigiye hejuru," },
    { "resource_id": 774, "text": "N’ibikombe biteguwe (neza)," },
    { "resource_id": 774, "text": "N’imisego itondetse ku mirongo (neza)," },
    { "resource_id": 774, "text": "N’amatapi arambuye (biryoheye ijisho)." },
    { "resource_id": 774, "text": "Ese ntibitegereza uko ingamiya zaremwe?" },
    { "resource_id": 774, "text": "N’uburyo ikirere cyahanitswe?" },
    {
      "resource_id": 774,
      "text": "N’uburyo imisozi yashimangiwe (mu butaka)?"
    },
    { "resource_id": 774, "text": "N’uburyo isi yarambuwe?" },
    {
      "resource_id": 774,
      "text": "Bityo, (yewe Muhamadi) bibutse kuko mu by’ukuri wowe uri uwibutsa,"
    },
    { "resource_id": 774, "text": "Ntukabashyireho igitugu." },
    {
      "resource_id": 774,
      "text": "Ariko utera umugongo (urwibutso) akanahakana,"
    },
    { "resource_id": 774, "text": "Allah azamuhanisha ibihano bihambaye." },
    { "resource_id": 774, "text": "Mu by’ukuri iwacu ni ho garukiro ryabo," },
    {
      "resource_id": 774,
      "text": "Hanyuma mu by’ukuri ni twe tuzabakorera ibarura"
    }
  ],
