{
  "translations": [
    {
      "resource_id": 127,
      "text": "Шиддат билан (жонни) суғуриб олувчи(фаришта)лар билан қасам."
    },
    {
      "resource_id": 127,
      "text": "Юмшоқлик билан жон олувчи(фаришта)лар билан қасам."
    },
    { "resource_id": 127, "text": "Сузиб юрувчи(фаришта)лар билан қасам." },
    {
      "resource_id": 127,
      "text": "Ўзишда мусобақа қилувчи(фаришта)лар билан қасам."
    },
    {
      "resource_id": 127,
      "text": "Амрнинг тадбирини қилувчи(фаришта)лар билан қасам."
    },
    { "resource_id": 127, "text": "Изтиробга тушувчи изтиробга тушган кунда." },
    { "resource_id": 127, "text": "Унга эргашувчи эргашганда." },
    { "resource_id": 127, "text": "Ўша кунда қалблар хавфга тўладир." },
    { "resource_id": 127, "text": "Уларнинг кўзлари қўрқинчга тўладир." },
    {
      "resource_id": 127,
      "text": "Улар: «Биз, албатта, ортга қайтариламизми?» – дерлар."
    },
    { "resource_id": 127, "text": "«Чириган суяк бўлганимиздан кейин ҳам-а?»" },
    {
      "resource_id": 127,
      "text": "Агар шундоқ бўлса, бу ҳасратий қайтиш-ку!» – дерлар."
    },
    {
      "resource_id": 127,
      "text": "Албатта, у(қиёмат) бир қичқириқдан бошқа нарса эмас."
    },
    {
      "resource_id": 127,
      "text": "Кўрибсизки, улар (қиёмат) майдонида турибдир."
    },
    { "resource_id": 127, "text": "Сенга Мусонинг хабари келдими?" },
    {
      "resource_id": 127,
      "text": "Қачонки Роббиси унга Муқаддас Тува водийсида нидо қилди."
    },
    {
      "resource_id": 127,
      "text": "«Фиръавн ҳузурига бор, албатта, у туғёнга кетди."
    },
    {
      "resource_id": 127,
      "text": "Бас унга айт: «Сенда покланишга (рағбат) борми?"
    },
    {
      "resource_id": 127,
      "text": "Ва сени Роббингга ҳидоят қилсам, шоядки (ундан) қўрқсанг», дегин»."
    },
    { "resource_id": 127, "text": "Ва унга улкан аломатни кўрсатди." },
    { "resource_id": 127, "text": "Ул уни ёлғонга чиқарди ва осий бўлди." },
    { "resource_id": 127, "text": "Сўнг ортига ўгирилиб, тезлаб кетди." },
    { "resource_id": 127, "text": "Кейин (одамларни) тўплади ва нидо қилди." },
    {
      "resource_id": 127,
      "text": "Ва, мен сизларнинг энг олий Роббингизман, деди."
    },
    {
      "resource_id": 127,
      "text": "Бас, Аллоҳ уни аввалги ва охирги гуноҳлари учун азобга олди."
    },
    {
      "resource_id": 127,
      "text": "Албатта, бунда У зотдан қўрққанлар учун ибрат бордир."
    },
    {
      "resource_id": 127,
      "text": "Сизларни яратиш қийинми ёки У зот бино қилган осмонними?"
    },
    {
      "resource_id": 127,
      "text": "Унинг шифтини юқори кўтарди ва беками-кўст, мустаҳкам қилиб қўйди."
    },
    { "resource_id": 127, "text": "Кечасини қоронғу ва кундузини ёруғ қилди." },
    { "resource_id": 127, "text": "Ва ундан сўнг ерни тухум шаклида қилди." },
    { "resource_id": 127, "text": "Ундан сувни, ўт-ўланларни чиқарди." },
    { "resource_id": 127, "text": "Ва тоғларни собит қилди." },
    {
      "resource_id": 127,
      "text": "Сизларга ва чорваларингизга манфаат бўлсин учун."
    },
    { "resource_id": 127, "text": "Вақтики катта ғолиб (қиёмат) келса." },
    { "resource_id": 127, "text": "У куни инсон қилган ишларини эслайдир." },
    {
      "resource_id": 127,
      "text": "Ва жаҳаннам кўрадиганларга зоҳир қилинадир."
    },
    { "resource_id": 127, "text": "Аммо кимики туғёнга кетган бўлса." },
    { "resource_id": 127, "text": "Ва бу дунё ҳаётини устун қўйган бўлса." },
    { "resource_id": 127, "text": "Бас, албатта, Жаҳийм (унга) ўрин бўладир." },
    {
      "resource_id": 127,
      "text": "Ва аммо, ким Роббисининг мақомидан қўрққан ва ўз нафсини ҳаволаниб кетишидан қайтарган бўлса..."
    },
    { "resource_id": 127, "text": "Бас, албатта, жаннат (унга) ўрин бўладир." },
    {
      "resource_id": 127,
      "text": "Сендан, қиёмат қачон бўлур, деб сўрашадир."
    },
    {
      "resource_id": 127,
      "text": "У(қиёмат)нинг зикрини сен қандоқ билардинг."
    },
    { "resource_id": 127, "text": "Унинг интиҳоси Роббинггагина хос." },
    {
      "resource_id": 127,
      "text": "Албатта, сен у(қиёмат)дан қўрқувчиларга огоҳлантирувчисан, холос."
    },
    {
      "resource_id": 127,
      "text": "У(қиёмат)ни кўрган кунлари, худди, бу дунёда бир кеча ёки кундуздан бошқа турмаганга ўхшарлар."
    }
  ],
