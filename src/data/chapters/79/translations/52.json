{
  "translations": [
    { "resource_id": 52, "text": "Andolsun şiddetle çekip çıkaranlara," },
    { "resource_id": 52, "text": "Usulcacık çekenlere," },
    { "resource_id": 52, "text": "Yüzüp yüzüp gidenlere," },
    { "resource_id": 52, "text": "Yarışıp geçenlere," },
    {
      "resource_id": 52,
      "text": "Derken bir iş çevirenlere kasem olsun (ki kıyamet var)."
    },
    { "resource_id": 52, "text": "O gün deprem sarsar," },
    { "resource_id": 52, "text": "Onu ikinci bir sarsıntı izler." },
    { "resource_id": 52, "text": "Yürekler vardır, o gün kaygıdan hoplar." },
    { "resource_id": 52, "text": "Gözler kalkmaz saygıdan." },
    {
      "resource_id": 52,
      "text": "Diyorlar ki: \"Biz tekrar eski halimize mi döndürülecekmişiz?"
    },
    {
      "resource_id": 52,
      "text": "\"Biz, çürümüş kemikler olduktan sonra ha?\""
    },
    {
      "resource_id": 52,
      "text": "\"Öyleyse bu çok zararlı bir dönüştür.\" dediler."
    },
    { "resource_id": 52, "text": "Fakat o bir tek haykırıştır." },
    { "resource_id": 52, "text": "Bir de bakarsın hepsi meydandadır." },
    { "resource_id": 52, "text": "Musa'nın haberi sana geldi mi?" },
    {
      "resource_id": 52,
      "text": "Hani Rabbi ona kutsal vaadi Tuva'da seslenmişti:"
    },
    {
      "resource_id": 52,
      "text": "\"Haydi, demişti, git Firavun'a, çünkü o çok azdı.\""
    },
    { "resource_id": 52, "text": "De ki: İster misin arınasın?" },
    {
      "resource_id": 52,
      "text": "Seni Rabbinin yoluna ileteyim de ondan korkasın."
    },
    { "resource_id": 52, "text": "Musa Firavun'a o büyük mucizeyi gösterdi." },
    { "resource_id": 52, "text": "Fakat Firavun yalanladı, karşı geldi." },
    { "resource_id": 52, "text": "Sonra koşarak dönüp gitti." },
    { "resource_id": 52, "text": "Derken adamlarını topladı da bağırdı:" },
    { "resource_id": 52, "text": "\"Ben sizin en yüce Rabbinizim\" dedi." },
    {
      "resource_id": 52,
      "text": "Allah da onu tuttu, dünya ve ahiret azabıyla yakalayıverdi."
    },
    {
      "resource_id": 52,
      "text": "Kuşkusuz bunda, saygı duyacaklar için bir ibret vardır."
    },
    {
      "resource_id": 52,
      "text": "Yaratılışça siz mi daha çetinsiniz, yoksa gök mü? Onu Allah bina etti."
    },
    { "resource_id": 52, "text": "Tavanını yükseltti, onu bir düzene koydu." },
    { "resource_id": 52, "text": "Gecesini kararttı, kuşluğunu çıkardı." },
    { "resource_id": 52, "text": "Bundan sonra da yeryüzünü döşedi." },
    { "resource_id": 52, "text": "Ondan suyunu ve otlağını çıkardı." },
    { "resource_id": 52, "text": "Dağlarını oturttu." },
    { "resource_id": 52, "text": "Sizin ve hayvanlarınızın geçimi için." },
    {
      "resource_id": 52,
      "text": "Fakat o her şeyi bastıran büyük felaket geldiği vakit,"
    },
    {
      "resource_id": 52,
      "text": "O, insanın neyin peşinde koştuğunu anladığı gün,"
    },
    {
      "resource_id": 52,
      "text": "Gören kimseler için cehennem hortlatıldığı vakit,"
    },
    { "resource_id": 52, "text": "Artık her kim azgınlık etmiş," },
    { "resource_id": 52, "text": "Ve dünya hayatını tercih etmişse," },
    { "resource_id": 52, "text": "Kuşkusuz onun varacağı yer cehennemdir." },
    {
      "resource_id": 52,
      "text": "Kim de Rabbinin divanında durmaktan korkmuş, nefsini boş heveslerden menetmiş ise,"
    },
    { "resource_id": 52, "text": "Kuşkusuz onun varacağı yer cennettir." },
    {
      "resource_id": 52,
      "text": "Sana o kıyameti soruyorlar, ne zaman kopacak diye."
    },
    { "resource_id": 52, "text": "Sen nerde, onu anlatmak nerde?!" },
    { "resource_id": 52, "text": "Onun son ilmi Rabbine aittir." },
    {
      "resource_id": 52,
      "text": "Sen ancak ondan korkacak olanları uyarıcısın."
    },
    {
      "resource_id": 52,
      "text": "Onlar o kıyameti görecekleri gün sanki dünyada bir akşam veya kuşluğundan başka durmamışa dönecekler."
    }
  ],
  "meta": {
