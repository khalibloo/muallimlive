{
  "translations": [
    { "resource_id": 52, "text": "Gök yarıldığı," },
    {
      "resource_id": 52,
      "text": "Rabbini dinleyip kendisine yaraşır şekilde boyun eğdiği vakit,"
    },
    { "resource_id": 52, "text": "Yer uzatılıp düzlendiği," },
    {
      "resource_id": 52,
      "text": "İçinde ne varsa attığı ve tamamen boşaldığı"
    },
    {
      "resource_id": 52,
      "text": "Ve Rabbini dinleyip kendisine yaraşır şekilde boyun eğdiği vakit,"
    },
    {
      "resource_id": 52,
      "text": "Ey insan! Kuşkusuz sen Rabbine doğru çaba üstüne çaba sarfetmektesin, nihayet O'na varacaksın."
    },
    { "resource_id": 52, "text": "O vakit kitabı sağ eline verilen," },
    { "resource_id": 52, "text": "Kolay bir hesapla hesaba çekilecek," },
    { "resource_id": 52, "text": "Ve sevinçli olarak ailesine dönecektir." },
    { "resource_id": 52, "text": "Ama kitabı arkasından verilen," },
    { "resource_id": 52, "text": "\"Yetiş ey ölüm!\" diye bağıracak" },
    { "resource_id": 52, "text": "Ve alevli ateşe girecektir." },
    { "resource_id": 52, "text": "Çünkü o ailesi içinde sevinçli idi." },
    { "resource_id": 52, "text": "Hiç Rabbine dönmeyeceğini sanmıştı." },
    { "resource_id": 52, "text": "Hayır Rabbi onu görmekte idi." },
    { "resource_id": 52, "text": "Şimdi, yemin ederim o şafağa," },
    { "resource_id": 52, "text": "Geceye ve içinde barındırdığı şeylere," },
    { "resource_id": 52, "text": "Derlendiği zaman o aya," },
    { "resource_id": 52, "text": "Ki, siz elbette halden hale geçeceksiniz." },
    { "resource_id": 52, "text": "Böyleyken onlar neden acaba iman etmezler?" },
    {
      "resource_id": 52,
      "text": "Karşılarında Kur'ân okunduğu vakit secde etmezler?"
    },
    { "resource_id": 52, "text": "Aksine o nankörler yalanlıyorlar." },
    {
      "resource_id": 52,
      "text": "Oysa Allah içlerinde sakladıklarını biliyor."
    },
    {
      "resource_id": 52,
      "text": "Onun için onlara elem verici bir azabı müjdele."
    },
    {
      "resource_id": 52,
      "text": "Ancak iman edip iyi ameller işleyenler başkadır. Onlara tükenmez bir ecir vardır."
    }
  ],
