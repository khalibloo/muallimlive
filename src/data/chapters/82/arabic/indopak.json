{
  "verses": [
    {
      "id": 5830,
      "verse_key": "82:1",
      "text_indopak": "اِذَا السَّمَآءُ انْفَطَرَتۡۙ‏"
    },
    {
      "id": 5831,
      "verse_key": "82:2",
      "text_indopak": "وَاِذَا الۡكَوَاكِبُ انْتَثَرَتۡۙ‏"
    },
    {
      "id": 5832,
      "verse_key": "82:3",
      "text_indopak": "وَاِذَا الۡبِحَارُ فُجِّرَتۡۙ‏"
    },
    {
      "id": 5833,
      "verse_key": "82:4",
      "text_indopak": "وَاِذَا الۡقُبُوۡرُ بُعۡثِرَتۡۙ‏"
    },
    {
      "id": 5834,
      "verse_key": "82:5",
      "text_indopak": "عَلِمَتۡ نَفۡسٌ مَّا قَدَّمَتۡ وَاَخَّرَتۡؕ‏"
    },
    {
      "id": 5835,
      "verse_key": "82:6",
      "text_indopak": "يٰۤاَيُّهَا الۡاِنۡسَانُ مَا غَرَّكَ بِرَبِّكَ الۡكَرِيۡمِۙ‏"
    },
    {
      "id": 5836,
      "verse_key": "82:7",
      "text_indopak": "الَّذِىۡ خَلَقَكَ فَسَوّٰٮكَ فَعَدَلَـكَۙ‏"
    },
    {
      "id": 5837,
      "verse_key": "82:8",
      "text_indopak": "فِىۡۤ اَىِّ صُوۡرَةٍ مَّا شَآءَ رَكَّبَكَؕ‏"
    },
    {
      "id": 5838,
      "verse_key": "82:9",
      "text_indopak": "كَلَّا بَلۡ تُكَذِّبُوۡنَ بِالدِّيۡنِۙ‏"
    },
    {
      "id": 5839,
      "verse_key": "82:10",
      "text_indopak": "وَاِنَّ عَلَيۡكُمۡ لَحٰـفِظِيۡنَۙ‏"
    },
    {
      "id": 5840,
      "verse_key": "82:11",
      "text_indopak": "كِرَامًا كَاتِبِيۡنَۙ‏"
    },
    {
      "id": 5841,
      "verse_key": "82:12",
      "text_indopak": "يَعۡلَمُوۡنَ مَا تَفۡعَلُوۡنَ‏"
    },
    {
      "id": 5842,
      "verse_key": "82:13",
      "text_indopak": "اِنَّ الۡاَبۡرَارَ لَفِىۡ نَعِيۡمٍۚ‏"
    },
    {
      "id": 5843,
      "verse_key": "82:14",
      "text_indopak": "وَاِنَّ الۡفُجَّارَ لَفِىۡ جَحِيۡمٍ ۚۖ‏"
    },
    {
      "id": 5844,
      "verse_key": "82:15",
      "text_indopak": "يَّصۡلَوۡنَهَا يَوۡمَ الدِّيۡنِ‏"
    },
    {
      "id": 5845,
      "verse_key": "82:16",
      "text_indopak": "وَمَا هُمۡ عَنۡهَا بِغَآٮِٕبِيۡنَؕ‏"
    },
    {
      "id": 5846,
      "verse_key": "82:17",
      "text_indopak": "وَمَاۤ اَدۡرٰٮكَ مَا يَوۡمُ الدِّيۡنِۙ‏"
    },
    {
      "id": 5847,
      "verse_key": "82:18",
      "text_indopak": "ثُمَّ مَاۤ اَدۡرٰٮكَ مَا يَوۡمُ الدِّيۡنِؕ‏"
    },
    {
      "id": 5848,
      "verse_key": "82:19",
      "text_indopak": "يَوۡمَ لَا تَمۡلِكُ نَفۡسٌ لِّنَفۡسٍ شَيۡـــًٔا​ ؕ وَالۡاَمۡرُ يَوۡمَٮِٕذٍ لِّلَّهِ‏"
    }
  ],
  "meta": { "filters": { "chapter_number": "82" } }
}
