{
  "verses": [
    {
      "id": 1803,
      "verse_key": "15:1",
      "text_imlaei_simple": "الر تلك ايات الكتاب وقران مبين"
    },
    {
      "id": 1804,
      "verse_key": "15:2",
      "text_imlaei_simple": "ربما يود الذين كفروا لو كانوا مسلمين"
    },
    {
      "id": 1805,
      "verse_key": "15:3",
      "text_imlaei_simple": "ذرهم ياكلوا ويتمتعوا ويلههم الامل فسوف يعلمون"
    },
    {
      "id": 1806,
      "verse_key": "15:4",
      "text_imlaei_simple": "وما اهلكنا من قرية الا ولها كتاب معلوم"
    },
    {
      "id": 1807,
      "verse_key": "15:5",
      "text_imlaei_simple": "ما تسبق من امة اجلها وما يستاخرون"
    },
    {
      "id": 1808,
      "verse_key": "15:6",
      "text_imlaei_simple": "وقالوا يا ايها الذي نزل عليه الذكر انك لمجنون"
    },
    {
      "id": 1809,
      "verse_key": "15:7",
      "text_imlaei_simple": "لو ما تاتينا بالملائكة ان كنت من الصادقين"
    },
    {
      "id": 1810,
      "verse_key": "15:8",
      "text_imlaei_simple": "ما ننزل الملائكة الا بالحق وما كانوا اذا منظرين"
    },
    {
      "id": 1811,
      "verse_key": "15:9",
      "text_imlaei_simple": "انا نحن نزلنا الذكر وانا له لحافظون"
    },
    {
      "id": 1812,
      "verse_key": "15:10",
      "text_imlaei_simple": "ولقد ارسلنا من قبلك في شيع الاولين"
    },
    {
      "id": 1813,
      "verse_key": "15:11",
      "text_imlaei_simple": "وما ياتيهم من رسول الا كانوا به يستهزئون"
    },
    {
      "id": 1814,
      "verse_key": "15:12",
      "text_imlaei_simple": "كذلك نسلكه في قلوب المجرمين"
    },
    {
      "id": 1815,
      "verse_key": "15:13",
      "text_imlaei_simple": "لا يؤمنون به وقد خلت سنة الاولين"
    },
    {
      "id": 1816,
      "verse_key": "15:14",
      "text_imlaei_simple": "ولو فتحنا عليهم بابا من السماء فظلوا فيه يعرجون"
    },
    {
      "id": 1817,
      "verse_key": "15:15",
      "text_imlaei_simple": "لقالوا انما سكرت ابصارنا بل نحن قوم مسحورون"
    },
    {
      "id": 1818,
      "verse_key": "15:16",
      "text_imlaei_simple": "ولقد جعلنا في السماء بروجا وزيناها للناظرين"
    },
    {
      "id": 1819,
      "verse_key": "15:17",
      "text_imlaei_simple": "وحفظناها من كل شيطان رجيم"
    },
    {
      "id": 1820,
      "verse_key": "15:18",
      "text_imlaei_simple": "الا من استرق السمع فاتبعه شهاب مبين"
    },
    {
      "id": 1821,
      "verse_key": "15:19",
      "text_imlaei_simple": "والارض مددناها والقينا فيها رواسي وانبتنا فيها من كل شيء موزون"
    },
    {
      "id": 1822,
      "verse_key": "15:20",
      "text_imlaei_simple": "وجعلنا لكم فيها معايش ومن لستم له برازقين"
    },
    {
      "id": 1823,
      "verse_key": "15:21",
      "text_imlaei_simple": "وان من شيء الا عندنا خزائنه وما ننزله الا بقدر معلوم"
    },
    {
      "id": 1824,
      "verse_key": "15:22",
      "text_imlaei_simple": "وارسلنا الرياح لواقح فانزلنا من السماء ماء فاسقيناكموه وما انتم له بخازنين"
    },
    {
      "id": 1825,
      "verse_key": "15:23",
      "text_imlaei_simple": "وانا لنحن نحيي ونميت ونحن الوارثون"
    },
    {
      "id": 1826,
      "verse_key": "15:24",
      "text_imlaei_simple": "ولقد علمنا المستقدمين منكم ولقد علمنا المستاخرين"
    },
    {
      "id": 1827,
      "verse_key": "15:25",
      "text_imlaei_simple": "وان ربك هو يحشرهم انه حكيم عليم"
    },
    {
      "id": 1828,
      "verse_key": "15:26",
      "text_imlaei_simple": "ولقد خلقنا الانسان من صلصال من حما مسنون"
    },
    {
      "id": 1829,
      "verse_key": "15:27",
      "text_imlaei_simple": "والجان خلقناه من قبل من نار السموم"
    },
    {
      "id": 1830,
      "verse_key": "15:28",
      "text_imlaei_simple": "واذ قال ربك للملائكة اني خالق بشرا من صلصال من حما مسنون"
    },
    {
      "id": 1831,
      "verse_key": "15:29",
      "text_imlaei_simple": "فاذا سويته ونفخت فيه من روحي فقعوا له ساجدين"
    },
    {
      "id": 1832,
      "verse_key": "15:30",
      "text_imlaei_simple": "فسجد الملائكة كلهم اجمعون"
    },
    {
      "id": 1833,
      "verse_key": "15:31",
      "text_imlaei_simple": "الا ابليس ابى ان يكون مع الساجدين"
    },
    {
      "id": 1834,
      "verse_key": "15:32",
      "text_imlaei_simple": "قال يا ابليس ما لك الا تكون مع الساجدين"
    },
    {
      "id": 1835,
      "verse_key": "15:33",
      "text_imlaei_simple": "قال لم اكن لاسجد لبشر خلقته من صلصال من حما مسنون"
    },
    {
      "id": 1836,
      "verse_key": "15:34",
      "text_imlaei_simple": "قال فاخرج منها فانك رجيم"
    },
    {
      "id": 1837,
      "verse_key": "15:35",
      "text_imlaei_simple": "وان عليك اللعنة الى يوم الدين"
    },
    {
      "id": 1838,
      "verse_key": "15:36",
      "text_imlaei_simple": "قال رب فانظرني الى يوم يبعثون"
    },
    {
      "id": 1839,
      "verse_key": "15:37",
      "text_imlaei_simple": "قال فانك من المنظرين"
    },
    {
      "id": 1840,
      "verse_key": "15:38",
      "text_imlaei_simple": "الى يوم الوقت المعلوم"
    },
    {
      "id": 1841,
      "verse_key": "15:39",
      "text_imlaei_simple": "قال رب بما اغويتني لازينن لهم في الارض ولاغوينهم اجمعين"
    },
    {
      "id": 1842,
      "verse_key": "15:40",
      "text_imlaei_simple": "الا عبادك منهم المخلصين"
    },
    {
      "id": 1843,
      "verse_key": "15:41",
      "text_imlaei_simple": "قال هذا صراط علي مستقيم"
    },
    {
      "id": 1844,
      "verse_key": "15:42",
      "text_imlaei_simple": "ان عبادي ليس لك عليهم سلطان الا من اتبعك من الغاوين"
    },
    {
      "id": 1845,
      "verse_key": "15:43",
      "text_imlaei_simple": "وان جهنم لموعدهم اجمعين"
    },
    {
      "id": 1846,
      "verse_key": "15:44",
      "text_imlaei_simple": "لها سبعة ابواب لكل باب منهم جزء مقسوم"
    },
    {
      "id": 1847,
      "verse_key": "15:45",
      "text_imlaei_simple": "ان المتقين في جنات وعيون"
    },
    {
      "id": 1848,
      "verse_key": "15:46",
      "text_imlaei_simple": "ادخلوها بسلام امنين"
    },
    {
      "id": 1849,
      "verse_key": "15:47",
      "text_imlaei_simple": "ونزعنا ما في صدورهم من غل اخوانا على سرر متقابلين"
    },
    {
      "id": 1850,
      "verse_key": "15:48",
      "text_imlaei_simple": "لا يمسهم فيها نصب وما هم منها بمخرجين"
    },
    {
      "id": 1851,
      "verse_key": "15:49",
      "text_imlaei_simple": "نبئ عبادي اني انا الغفور الرحيم"
    },
    {
      "id": 1852,
      "verse_key": "15:50",
      "text_imlaei_simple": "وان عذابي هو العذاب الاليم"
    },
    {
      "id": 1853,
      "verse_key": "15:51",
      "text_imlaei_simple": "ونبئهم عن ضيف ابراهيم"
    },
    {
      "id": 1854,
      "verse_key": "15:52",
      "text_imlaei_simple": "اذ دخلوا عليه فقالوا سلاما قال انا منكم وجلون"
    },
    {
      "id": 1855,
      "verse_key": "15:53",
      "text_imlaei_simple": "قالوا لا توجل انا نبشرك بغلام عليم"
    },
    {
      "id": 1856,
      "verse_key": "15:54",
      "text_imlaei_simple": "قال ابشرتموني على ان مسني الكبر فبم تبشرون"
    },
    {
      "id": 1857,
      "verse_key": "15:55",
      "text_imlaei_simple": "قالوا بشرناك بالحق فلا تكن من القانطين"
    },
    {
      "id": 1858,
      "verse_key": "15:56",
      "text_imlaei_simple": "قال ومن يقنط من رحمة ربه الا الضالون"
    },
    {
      "id": 1859,
      "verse_key": "15:57",
      "text_imlaei_simple": "قال فما خطبكم ايها المرسلون"
    },
    {
      "id": 1860,
      "verse_key": "15:58",
      "text_imlaei_simple": "قالوا انا ارسلنا الى قوم مجرمين"
    },
    {
      "id": 1861,
      "verse_key": "15:59",
      "text_imlaei_simple": "الا ال لوط انا لمنجوهم اجمعين"
    },
    {
      "id": 1862,
      "verse_key": "15:60",
      "text_imlaei_simple": "الا امراته قدرنا انها لمن الغابرين"
    },
    {
      "id": 1863,
      "verse_key": "15:61",
      "text_imlaei_simple": "فلما جاء ال لوط المرسلون"
    },
    {
      "id": 1864,
      "verse_key": "15:62",
      "text_imlaei_simple": "قال انكم قوم منكرون"
    },
    {
      "id": 1865,
      "verse_key": "15:63",
      "text_imlaei_simple": "قالوا بل جئناك بما كانوا فيه يمترون"
    },
    {
      "id": 1866,
      "verse_key": "15:64",
      "text_imlaei_simple": "واتيناك بالحق وانا لصادقون"
    },
    {
      "id": 1867,
      "verse_key": "15:65",
      "text_imlaei_simple": "فاسر باهلك بقطع من الليل واتبع ادبارهم ولا يلتفت منكم احد وامضوا حيث تؤمرون"
    },
    {
      "id": 1868,
      "verse_key": "15:66",
      "text_imlaei_simple": "وقضينا اليه ذلك الامر ان دابر هؤلاء مقطوع مصبحين"
    },
    {
      "id": 1869,
      "verse_key": "15:67",
      "text_imlaei_simple": "وجاء اهل المدينة يستبشرون"
    },
    {
      "id": 1870,
      "verse_key": "15:68",
      "text_imlaei_simple": "قال ان هؤلاء ضيفي فلا تفضحون"
    },
    {
      "id": 1871,
      "verse_key": "15:69",
      "text_imlaei_simple": "واتقوا الله ولا تخزون"
    },
    {
      "id": 1872,
      "verse_key": "15:70",
      "text_imlaei_simple": "قالوا اولم ننهك عن العالمين"
    },
    {
      "id": 1873,
      "verse_key": "15:71",
      "text_imlaei_simple": "قال هؤلاء بناتي ان كنتم فاعلين"
    },
    {
      "id": 1874,
      "verse_key": "15:72",
      "text_imlaei_simple": "لعمرك انهم لفي سكرتهم يعمهون"
    },
    {
      "id": 1875,
      "verse_key": "15:73",
      "text_imlaei_simple": "فاخذتهم الصيحة مشرقين"
    },
    {
      "id": 1876,
      "verse_key": "15:74",
      "text_imlaei_simple": "فجعلنا عاليها سافلها وامطرنا عليهم حجارة من سجيل"
    },
    {
      "id": 1877,
      "verse_key": "15:75",
      "text_imlaei_simple": "ان في ذلك لايات للمتوسمين"
    },
    {
      "id": 1878,
      "verse_key": "15:76",
      "text_imlaei_simple": "وانها لبسبيل مقيم"
    },
    {
      "id": 1879,
      "verse_key": "15:77",
      "text_imlaei_simple": "ان في ذلك لاية للمؤمنين"
    },
    {
      "id": 1880,
      "verse_key": "15:78",
      "text_imlaei_simple": "وان كان اصحاب الايكة لظالمين"
    },
    {
      "id": 1881,
      "verse_key": "15:79",
      "text_imlaei_simple": "فانتقمنا منهم وانهما لبامام مبين"
    },
    {
      "id": 1882,
      "verse_key": "15:80",
      "text_imlaei_simple": "ولقد كذب اصحاب الحجر المرسلين"
    },
    {
      "id": 1883,
      "verse_key": "15:81",
      "text_imlaei_simple": "واتيناهم اياتنا فكانوا عنها معرضين"
    },
    {
      "id": 1884,
      "verse_key": "15:82",
      "text_imlaei_simple": "وكانوا ينحتون من الجبال بيوتا امنين"
    },
    {
      "id": 1885,
      "verse_key": "15:83",
      "text_imlaei_simple": "فاخذتهم الصيحة مصبحين"
    },
    {
      "id": 1886,
      "verse_key": "15:84",
      "text_imlaei_simple": "فما اغنى عنهم ما كانوا يكسبون"
    },
    {
      "id": 1887,
      "verse_key": "15:85",
      "text_imlaei_simple": "وما خلقنا السماوات والارض وما بينهما الا بالحق وان الساعة لاتية فاصفح الصفح الجميل"
    },
    {
      "id": 1888,
      "verse_key": "15:86",
      "text_imlaei_simple": "ان ربك هو الخلاق العليم"
    },
    {
      "id": 1889,
      "verse_key": "15:87",
      "text_imlaei_simple": "ولقد اتيناك سبعا من المثاني والقران العظيم"
    },
    {
      "id": 1890,
      "verse_key": "15:88",
      "text_imlaei_simple": "لا تمدن عينيك الى ما متعنا به ازواجا منهم ولا تحزن عليهم واخفض جناحك للمؤمنين"
    },
    {
      "id": 1891,
      "verse_key": "15:89",
      "text_imlaei_simple": "وقل اني انا النذير المبين"
    },
    {
      "id": 1892,
      "verse_key": "15:90",
      "text_imlaei_simple": "كما انزلنا على المقتسمين"
    },
    {
      "id": 1893,
      "verse_key": "15:91",
      "text_imlaei_simple": "الذين جعلوا القران عضين"
    },
    {
      "id": 1894,
      "verse_key": "15:92",
      "text_imlaei_simple": "فوربك لنسالنهم اجمعين"
    },
    {
      "id": 1895,
      "verse_key": "15:93",
      "text_imlaei_simple": "عما كانوا يعملون"
    },
    {
      "id": 1896,
      "verse_key": "15:94",
      "text_imlaei_simple": "فاصدع بما تؤمر واعرض عن المشركين"
    },
    {
      "id": 1897,
      "verse_key": "15:95",
      "text_imlaei_simple": "انا كفيناك المستهزئين"
    },
    {
      "id": 1898,
      "verse_key": "15:96",
      "text_imlaei_simple": "الذين يجعلون مع الله الها اخر فسوف يعلمون"
    },
    {
      "id": 1899,
      "verse_key": "15:97",
      "text_imlaei_simple": "ولقد نعلم انك يضيق صدرك بما يقولون"
    },
    {
      "id": 1900,
      "verse_key": "15:98",
      "text_imlaei_simple": "فسبح بحمد ربك وكن من الساجدين"
    },
    {
      "id": 1901,
      "verse_key": "15:99",
      "text_imlaei_simple": "واعبد ربك حتى ياتيك اليقين"
    }
  ],
