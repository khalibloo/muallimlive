{
  "translations": [
    { "resource_id": 222, "text": "Қиямет уақиғасы болған кезде," },
    { "resource_id": 222, "text": "Оның болуын өтірік деуші болмас." },
    { "resource_id": 222, "text": "(Ол) төмендетеді, жоғарлатады." },
    { "resource_id": 222, "text": "Сол уақытта жер тұтас сілкіндіріледі." },
    { "resource_id": 222, "text": "Таулар мүлде үгітіледі." },
    { "resource_id": 222, "text": "Ұшқан тозаңдай болады." },
    {
      "resource_id": 222,
      "text": "Сол уақытта сендер үш бөлімге бөлінесіңдер;"
    },
    {
      "resource_id": 222,
      "text": "(Ғамал дәптері оңынан берілген) оңшылдар, нендей жақсы ол оңшылдар."
    },
    {
      "resource_id": 222,
      "text": "(Ғамал дәптері солынан берілген) солшылдар, нендей жаман ол солшылдар."
    },
    { "resource_id": 222, "text": "Озаттар алдынғы қатарда болады." },
    { "resource_id": 222, "text": "Міне солар, Аллаға жақын болғандар." },
    { "resource_id": 222, "text": "Ұжмақта нығметке бөленеді;" },
    { "resource_id": 222, "text": "Бұрынғылардан көбірек." },
    { "resource_id": 222, "text": "Соңғылардан азырақ." },
    { "resource_id": 222, "text": "Безенген тақтар үстінде." },
    { "resource_id": 222, "text": "Олардың үстінде ерсілі-қарсылы отырады." },
    {
      "resource_id": 222,
      "text": "Оларға өзгермес жастар айналып, қызмет етеді;"
    },
    {
      "resource_id": 222,
      "text": "Ағып жатқан арақтан толтырылған шелектер, құмандар және кәселерменен."
    },
    { "resource_id": 222, "text": "Ол; бас ауыртпайды да мас қылмайды." },
    { "resource_id": 222, "text": "Қалаған жемістері бар." },
    { "resource_id": 222, "text": "Көңілдері соққан құс еті бар." },
    { "resource_id": 222, "text": "Бота көз хұрлар бар." },
    { "resource_id": 222, "text": "Сақтаулы інжу сияқты." },
    { "resource_id": 222, "text": "Бұл істеген ғамалдарының сыйлығы." },
    {
      "resource_id": 222,
      "text": "Олар жаннатта бос не күнәлы сөз естімейді."
    },
    {
      "resource_id": 222,
      "text": "Бірақ \"Сәлем, сәлем\" деген сөзді ғана естиді."
    },
    { "resource_id": 222, "text": "Оңшылдар, ол оңшылдар нендей бақытты." },
    { "resource_id": 222, "text": "Олар тікенсіз сидыр (ағаштары);" },
    {
      "resource_id": 222,
      "text": "Жемістері үсті-үстіне шоғырланған мұз (банан) ағаштарының,"
    },
    { "resource_id": 222, "text": "Созылған көлеңкенің астында болады." },
    { "resource_id": 222, "text": "Сарқырап аққан су бар." },
    { "resource_id": 222, "text": "Мол жеміс бар;" },
    {
      "resource_id": 222,
      "text": "Ешбір түгеп, үзілмейтін, ешкім қорымайтын,"
    },
    { "resource_id": 222, "text": "Биік төсектерде болады." },
    {
      "resource_id": 222,
      "text": "Расында хұр қыздарын жаңадан жаратамыз. (Немесе жаннаттық әйелдерді қайтадан жаратамыз.Б.)"
    },
    {
      "resource_id": 222,
      "text": "Оларды ер көрмеген қыздар етіп, жаратамыз."
    },
    { "resource_id": 222, "text": "Күйеуін сүйгіш құрдас болады." },
    { "resource_id": 222, "text": "Бұл айтылғандар, оңшылдар үшін болады." },
    { "resource_id": 222, "text": "Бір топ бұрынғылардан." },
    { "resource_id": 222, "text": "Бір топ соңғылардан." },
    { "resource_id": 222, "text": "Солшылдар, сол шолшылдар невдей сұмырай." },
    { "resource_id": 222, "text": "Олар ыстық бу, қайнар суда болады." },
    { "resource_id": 222, "text": "Қара түнек көлеңкеде болады." },
    { "resource_id": 222, "text": "Салқын да емес, жайлы да емес." },
    {
      "resource_id": 222,
      "text": "Өйткені олар, бұдан бұрын (дүниеде) тоң мойын әуесқорлар еді."
    },
    { "resource_id": 222, "text": "Зор күнәда қасарысушы еді." },
    {
      "resource_id": 222,
      "text": "\"Өліп, топырақ және сүйектер болсақ та шын тірілеміз бе?\",- дейді."
    },
    {
      "resource_id": 222,
      "text": "\"Бұрынғы аталарымыз да тіріле ме?\",- (дейді.)"
    },
    {
      "resource_id": 222,
      "text": "(Мұхаммед Ғ.С.): \"Сөзсіз бұрынғылар да, соңғылар да.\",- де."
    },
    {
      "resource_id": 222,
      "text": "\"Әлбетте, мәлім күнде белгілі орынға жиналады\" (де.)"
    },
    { "resource_id": 222, "text": "Сосын сендер әй адасқан өтірікшілер!" },
    { "resource_id": 222, "text": "Әлбетте ағаштан, Заққұмнан жейсіңдер." },
    { "resource_id": 222, "text": "Одан қарындарыңды толтырасыңдар." },
    { "resource_id": 222, "text": "Оның үстіне қайнар судан ішесіңдер." },
    { "resource_id": 222, "text": "Шөлдеген түйеше, сіміресіңдер." },
    { "resource_id": 222, "text": "Міне олардың қиямет күнгі сыйлықтары." },
    {
      "resource_id": 222,
      "text": "Сендерді Біз жараттық. Сонда неге мойындамайсыңдар?"
    },
    { "resource_id": 222, "text": "Сендер тамызған мәни суын көрдіңдер ме?" },
    {
      "resource_id": 222,
      "text": "Оны сендер жаратасыңдар ма? Немесе Біз жаратмыз ба?"
    },
    {
      "resource_id": 222,
      "text": "Біз араларыңда өлімді белгіледік. Бізден ешкім озалмайды."
    },
    {
      "resource_id": 222,
      "text": "Сендердің бейнелеріңді өзгертіп, сендер білмегенді жарата аламыз."
    },
    {
      "resource_id": 222,
      "text": "Расында бұрынғы жаратуды білесіңдер, ендеше түсінбейсіңдер ме?"
    },
    { "resource_id": 222, "text": "Ал енді еккендеріңді көрдіңдер ме?" },
    {
      "resource_id": 222,
      "text": "Оны сендер өсіресіңдер ме? Не Біз өсіреміз бе?"
    },
    {
      "resource_id": 222,
      "text": "Егер қаласақ, оны қоқымға айналдырар едік. Сонда күңкілдесе берер едіңдер;"
    },
    { "resource_id": 222, "text": "\"Расында зиянға ұшырадық,\"" },
    { "resource_id": 222, "text": "\"Тіпті мүлде бос қалдық\" (дер едіңдер.)" },
    { "resource_id": 222, "text": "Ішкен суларыңды көрдіңдер ме?" },
    {
      "resource_id": 222,
      "text": "Оны бұлттан сендер жаудырасыңдар ма? Немесе Біз жаудырамыз ба?"
    },
    {
      "resource_id": 222,
      "text": "Егер қаласақ оны ащы қылар едік. Ендеше, шүкір етпейсіңдер ме?"
    },
    { "resource_id": 222, "text": "Жаққан оттарыңды көрдіңдер ме?" },
    {
      "resource_id": 222,
      "text": "Оның ағашын сендер жараттыңдар ма? немесе Біз жараттық па?"
    },
    {
      "resource_id": 222,
      "text": "Біз оны бір ескерткіш және жүргіншілер үшін пайдалы қылдық."
    },
    {
      "resource_id": 222,
      "text": "(Мұхаммед Ғ.С.) Ендеше Раббыңды ұлы атымен дәріпте."
    },
    {
      "resource_id": 222,
      "text": "Ал енді жұлдыздардың орындарына серт етемін."
    },
    { "resource_id": 222, "text": "Егер білсеңдер, ол, зор серт." },
    { "resource_id": 222, "text": "Шын мәнінде ол ардақты Құран." },
    {
      "resource_id": 222,
      "text": "Кітапта (Лаухы Махфүзда. Б.М.Р.) сақтаулы."
    },
    {
      "resource_id": 222,
      "text": "Оны тап-таза болғандар ғана ұстайды. (Дәретсіз кісі ұстамайды.)"
    },
    { "resource_id": 222, "text": "Әлемдердің Раббы жақтан түсірілген." },
    { "resource_id": 222, "text": "Сендер осы сөзді құр көресіңдер ме?" },
    {
      "resource_id": 222,
      "text": "Расында берген ризыққа шүкір етудің орнына оны жасынға шығарасыңдар ма? (Ж.)"
    },
    { "resource_id": 222, "text": "Ал жан жұтқыншаққа келген кезде;" },
    { "resource_id": 222, "text": "Сол уақытта сендер қарап қаласыңдар." },
    {
      "resource_id": 222,
      "text": "Негізінде ол өліп бара жатқанға Біз жақынырақпыз. Сендер көрмейсіңдер."
    },
    { "resource_id": 222, "text": "Ал сонда егер жазаланбайтын болсаңдар;" },
    {
      "resource_id": 222,
      "text": "Егер шын айтсаңдар, оның жанын қайтарыңдаршы."
    },
    {
      "resource_id": 222,
      "text": "Ал егер өлген кісі, Аллаға жақындардан болса;"
    },
    {
      "resource_id": 222,
      "text": "Сонда оған рахатты шаттық әрі нығметті ұжмақ бар."
    },
    { "resource_id": 222, "text": "Ал енді өлі оңшылдардан болса;" },
    { "resource_id": 222, "text": "Саған оңшылдардан, \"Сәлем\" (делінеді.)" },
    {
      "resource_id": 222,
      "text": "Егер өлі, жасынға шығарушы адасқандардан болса;"
    },
    {
      "resource_id": 222,
      "text": "Сонда оның қонақ асысы, қайнар судан болады."
    },
    { "resource_id": 222, "text": "Әрі тозаққа салынады." },
    { "resource_id": 222, "text": "Сөзсіз міне анық шындық осы." },
    {
      "resource_id": 222,
      "text": "(Мұхаммед Ғ.С.) үлы Раббыңды атымен дәріпте."
    }
  ],
