{
  "translations": [
    { "resource_id": 210, "text": "Kıyamet koptuğu zaman." },
    {
      "resource_id": 210,
      "text": "Onun gerçekleşmesine artık yalan diyecek yoktur."
    },
    { "resource_id": 210, "text": "O; alçaltıcı, yükselticidir." },
    { "resource_id": 210, "text": "Yer şiddetle sarsılınca." },
    { "resource_id": 210, "text": "Dağlar paramparça olduğunda." },
    {
      "resource_id": 210,
      "text": "Derken toz toprak halinde dağılıp savrulduğu zaman."
    },
    { "resource_id": 210, "text": "Ve sizler de üç sınıf olduğunuz zaman." },
    { "resource_id": 210, "text": "Sağdakiler, (ne mutlu) o sağdakilere!" },
    { "resource_id": 210, "text": "Soldakiler, ne bahtsızdır onlar!" },
    { "resource_id": 210, "text": "(Hayırda) önde olanlar, öncülerdir." },
    { "resource_id": 210, "text": "İşte onlar, yakınlaştırılmış olanlardır." },
    { "resource_id": 210, "text": "Onlar Naim Cennetleri'ndedirler." },
    { "resource_id": 210, "text": "Bir çoğu öncekilerdendir." },
    { "resource_id": 210, "text": "Birazı da sonrakilerdendir." },
    {
      "resource_id": 210,
      "text": "(Altın ile) işlenmiş tahtlar üzerindedirler."
    },
    { "resource_id": 210, "text": "Karşılıklı olarak oturup yaslanırlar." },
    {
      "resource_id": 210,
      "text": "Onların etrafında ölümsüz genç hizmetçiler dolaşır."
    },
    {
      "resource_id": 210,
      "text": "Kaynağından (doldurulmuş) testiler, ibrikler ve kadehler."
    },
    {
      "resource_id": 210,
      "text": "Ondan başları da ağrımaz ve akılları da giderilmez."
    },
    { "resource_id": 210, "text": "Beğendikleri meyveler." },
    { "resource_id": 210, "text": "Canlarının çektiği kuş etleri." },
    { "resource_id": 210, "text": "Ve iri gözlü huriler." },
    { "resource_id": 210, "text": "Saklı inciler gibi." },
    {
      "resource_id": 210,
      "text": "İşledikleri amellere karşılık olarak (verilir.)"
    },
    {
      "resource_id": 210,
      "text": "Orada boş bir söz ve günaha sokan bir laf işitmezler."
    },
    { "resource_id": 210, "text": "Söylenen; yalnızca \"Selâm, selâm!\" dır." },
    { "resource_id": 210, "text": "Sağdakiler, (ne mutlu) o sağdakilere!" },
    { "resource_id": 210, "text": "Dikensiz sedir ağaçlarında." },
    { "resource_id": 210, "text": "Salkım salkım muz ağaçlarında." },
    { "resource_id": 210, "text": "Uzamış gölgeler." },
    { "resource_id": 210, "text": "Çağlayarak akan sular." },
    { "resource_id": 210, "text": "Bir çok meyveler." },
    { "resource_id": 210, "text": "Bitip tükenmeyen ve yasaklanmayan." },
    { "resource_id": 210, "text": "Ve yüksek döşekler içindedirler." },
    {
      "resource_id": 210,
      "text": "Biz, o hurileri yeni bir yaratılışla yarattık."
    },
    { "resource_id": 210, "text": "Onları bakireler kıldık." },
    { "resource_id": 210, "text": "Eşlerine düşkün ve yaşıt." },
    { "resource_id": 210, "text": "Sağ taraftakiler için." },
    { "resource_id": 210, "text": "Bir çoğu öncekilerden." },
    { "resource_id": 210, "text": "Bir çoğu da sonrakilerdendir." },
    { "resource_id": 210, "text": "Soldakiler, ne bahtsızdır onlar!" },
    {
      "resource_id": 210,
      "text": "İçlerine işleyen bir ateş ve kaynar su içinde."
    },
    { "resource_id": 210, "text": "Simsiyah bir duman gölgesinde." },
    { "resource_id": 210, "text": "Ne bir serinlik, ne de bir güzellik!" },
    {
      "resource_id": 210,
      "text": "Çünkü onlar, bundan önce (arzularının hoşuna giden şeyler içinde) şımarmış kimselerdi."
    },
    { "resource_id": 210, "text": "Büyük günah üzerinde ısrar ediyorlardı." },
    {
      "resource_id": 210,
      "text": "\"Biz ölüp, toprak ve kemik olduktan sonra tekrar mı dirileceğiz?\" diyorlardı."
    },
    { "resource_id": 210, "text": "\"Daha önceki atalarımız da mı?\"" },
    { "resource_id": 210, "text": "De ki: \"Hem öncekiler, hem sonrakiler.\"" },
    {
      "resource_id": 210,
      "text": "Belli bir günün, belli bir vaktinde bir araya getirileceksiniz."
    },
    {
      "resource_id": 210,
      "text": "Sonra gerçekten sizler ey sapıklar, yalanlayıcılar!"
    },
    {
      "resource_id": 210,
      "text": "Elbette bir ağaçtan, zakkum ağacından yiyeceksiniz."
    },
    { "resource_id": 210, "text": "Karınlarınızı hep ondan dolduracaksınız." },
    { "resource_id": 210, "text": "Üstüne de kaynar sudan içeceksiniz." },
    { "resource_id": 210, "text": "Susamış develerin içişi gibi içeceksiniz." },
    {
      "resource_id": 210,
      "text": "İşte ceza gününde onlara sunulacak ziyafet budur."
    },
    {
      "resource_id": 210,
      "text": "Sizi biz yarattık. (Tekrardan yaratılışı) tasdik etmeniz gerekmez mi ?"
    },
    { "resource_id": 210, "text": "Akıttığınız meniyi gördünüz mü?" },
    {
      "resource_id": 210,
      "text": "Onu siz mi yaratıyorsunuz? Yoksa yaratan biz miyiz?"
    },
    {
      "resource_id": 210,
      "text": "Aranızda ölümü takdir eden biziz. Bizler aciz de değiliz."
    },
    {
      "resource_id": 210,
      "text": "Yerinize benzerlerinizi getirip, değiştirmek ve sizi bilemediğiniz bir şekilde yeniden yaratmak hususunda."
    },
    {
      "resource_id": 210,
      "text": "Andolsun ki ilk yaratmayı bildiniz. O halde düşünüp öğüt almanız gerekmez mi?"
    },
    { "resource_id": 210, "text": "Ektiğiniz şeyleri gördünüz mü?" },
    {
      "resource_id": 210,
      "text": "Onu siz mi bitiriyorsunuz? Yoksa bitiren biz miyiz?"
    },
    {
      "resource_id": 210,
      "text": "Dileseydik onu kuru bir çöp yapardık; siz de şaşırıp kalırdınız."
    },
    { "resource_id": 210, "text": "\"Muhakkak biz, çok ziyandayız!\"" },
    {
      "resource_id": 210,
      "text": "\"Daha doğrusu biz yoksul bırakıldık (dersiniz).\""
    },
    { "resource_id": 210, "text": "İçtiğiniz suyu gördünüz mü?" },
    {
      "resource_id": 210,
      "text": "Onu buluttan siz mi indirdiniz? Yoksa indiren biz miyiz?"
    },
    {
      "resource_id": 210,
      "text": "Dileseydik onu tuzlu yapardık. Şükretmeniz gerekmez mi?"
    },
    {
      "resource_id": 210,
      "text": "Tutuşturup, yakmakta olduğunuz ateşi gördünüz mü?"
    },
    {
      "resource_id": 210,
      "text": "Onun ağacını siz mi yarattınız? Yoksa yaratan biz miyiz?"
    },
    {
      "resource_id": 210,
      "text": "Biz onu, bir ibret ve gelip geçen yolcuların istifadesi için yarattık."
    },
    {
      "resource_id": 210,
      "text": "O halde sen, Yüce Rabbinin adını tesbih et!"
    },
    { "resource_id": 210, "text": "Yıldızların yerlerine yemin ederim ki!" },
    {
      "resource_id": 210,
      "text": "Eğer bilirseniz, gerçekten bu büyük bir yemindir."
    },
    { "resource_id": 210, "text": "Şüphesiz bu, değerli bir Kur'an'dır." },
    { "resource_id": 210, "text": "Gizli/korunmuş bir kitaptadır." },
    {
      "resource_id": 210,
      "text": "Ona ancak temizlenmiş olanlar dokunabilir."
    },
    { "resource_id": 210, "text": "Alemlerin Rabbi tarafından indirilmiştir." },
    { "resource_id": 210, "text": "Şimdi siz, bu sözü mü yalanlıyorsunuz?" },
    {
      "resource_id": 210,
      "text": "Onu yalanlayarak mı size verilen nimete şükrediyorsunuz?"
    },
    { "resource_id": 210, "text": "Hani can boğaza gelip dayandığında." },
    { "resource_id": 210, "text": "O vakit siz bakıp durursunuz." },
    {
      "resource_id": 210,
      "text": "Biz; ona sizden daha yakınız, ama göremezsiniz."
    },
    {
      "resource_id": 210,
      "text": "Madem ki (tekrardan dirilip) ceza görmeyecekmişsiniz."
    },
    {
      "resource_id": 210,
      "text": "Eğer doğru söylüyor iseniz, onu (çıkmakta olan canı) geri çevirsenize!"
    },
    {
      "resource_id": 210,
      "text": "Eğer o (ölen kişi), yakın kılınanlardan ise."
    },
    {
      "resource_id": 210,
      "text": "Ona rahatlık, güzel rızık ve Naim Cenneti vardır."
    },
    { "resource_id": 210, "text": "Eğer o, sağdakilerden ise." },
    { "resource_id": 210, "text": "Ey sağdaki! Sana selam olsun!" },
    { "resource_id": 210, "text": "Eğer o, yalanlayan sapıklardan ise." },
    {
      "resource_id": 210,
      "text": "İşte ona da kaynar sudan bir ziyafet vardır."
    },
    { "resource_id": 210, "text": "Ve (onun sonu) Cehennem'e atılmaktır." },
    { "resource_id": 210, "text": "Şüphe yok ki, kesin gerçek işte budur." },
    {
      "resource_id": 210,
      "text": "O halde sen, Yüce Rabbinin adını tesbih et!"
    }
  ],
