{
  "translations": [
    {
      "resource_id": 75,
      "text": " Peyğəmbər qaşqabağını tökdü və üzünü çevirdi –"
    },
    { "resource_id": 75, "text": " yanına korun gəldiyinə görə." },
    {
      "resource_id": 75,
      "text": " Nə bilirdin ki, bəlkə o gü­nahlardan təmizlənəcəkdi"
    },
    {
      "resource_id": 75,
      "text": " və yaxud nəsihət dinlə­yib fayda­lanacaqdı."
    },
    { "resource_id": 75, "text": " Nəsihətə ehtiyacı olma­ya­na gəlincə isə," },
    { "resource_id": 75, "text": "sən ona diqqət yetirirsən." },
    {
      "resource_id": 75,
      "text": " Onun təmizlənməməyi­nin sənə bir aidiyyəti yox­dur."
    },
    { "resource_id": 75, "text": " Səy göstərib sənin yanına gələn," },
    { "resource_id": 75, "text": " Allahdan qorxan kimsəyə gəlincə," },
    { "resource_id": 75, "text": "sən ona məhəl qoymursan!" },
    { "resource_id": 75, "text": " Xeyr! Şübhəsiz ki, bu, bir nəsi­hətdir." },
    {
      "resource_id": 75,
      "text": " Kim istəsə, qoy onu xa­tırlayıb ibrət alsın."
    },
    { "resource_id": 75, "text": " Bu Quran kəramətli sə­hi­fələr­də -" },
    { "resource_id": 75, "text": " yüksək və pak səhifələr­də­dir." },
    { "resource_id": 75, "text": " Bu səhifələr elçilərin əl­lə­rində –" },
    {
      "resource_id": 75,
      "text": " möhtərəm və müti olan­ mələklərin əllə­rindədir."
    },
    {
      "resource_id": 75,
      "text": " Qoy ölsün kafir insan! O necə də nankordur!"
    },
    {
      "resource_id": 75,
      "text": " Qoy baxıb görsün, Allah onu nədən yaradıb?"
    },
    {
      "resource_id": 75,
      "text": " Allah onu nütfədən ya­ratdı və onu müəyyən şəklə saldı."
    },
    { "resource_id": 75, "text": " Sonra da onun yolunu asanlaş­dırdı." },
    { "resource_id": 75, "text": " Sonra onu öldürüb qə­bi­rə yerləş­dirdi." },
    {
      "resource_id": 75,
      "text": " Sonra da istədiyi vaxt onu yenidən dirildə­cək."
    },
    {
      "resource_id": 75,
      "text": "Xeyr! O, hələ də Allahın ona bu­yurduğunu yerinə ye­tir­mə­miş­dir."
    },
    { "resource_id": 75, "text": " Qoy insan yediyinə diq­qət yetir­sin!" },
    {
      "resource_id": 75,
      "text": " Həqiqətən, yağışı bol-bol Biz yağ­dırırıq."
    },
    { "resource_id": 75, "text": " Sonra da yeri çat-çat ya­rıb" },
    { "resource_id": 75, "text": "orada taxıl yetişdiririk." },
    { "resource_id": 75, "text": " Habelə üzüm və yonca," },
    { "resource_id": 75, "text": " zeytun və xurma ağac­la­rı," },
    { "resource_id": 75, "text": "sıx-sıx bağlar," },
    { "resource_id": 75, "text": " meyvələr və otlar da bi­tiririk." },
    {
      "resource_id": 75,
      "text": " Bu nemətlər sizin isti­fa­də­niz və mal-qaranızın fayda­lan­ması üçün­dür."
    },
    { "resource_id": 75, "text": " Qulaqbatırıcı bir səs gə­ləndə –" },
    { "resource_id": 75, "text": " o gün insan qaçacaq öz qarda­şından," },
    { "resource_id": 75, "text": "anasından, atasından," },
    { "resource_id": 75, "text": " həyat yoldaşından və övladla­rından!" },
    {
      "resource_id": 75,
      "text": " O gün onlardan hər biri­nin yetə­rincə işi olacaq­."
    },
    { "resource_id": 75, "text": " O gün neçə-neçə üzlər par­layacaq," },
    { "resource_id": 75, "text": " güləcək və fərəhlənə­cək­." },
    {
      "resource_id": 75,
      "text": " O gün neçə-neçə üzlərə toz-torpaq hopacaq,"
    },
    { "resource_id": 75, "text": " onları zülmət bürüyə­cək­." },
    { "resource_id": 75, "text": " Məhz onlar kafirlər, gü­nah­kar­lardır!" }
  ],
  "meta": {
    "translation_name": "Alikhan Musayev",
    "author_name": "Alikhan Musayev",
