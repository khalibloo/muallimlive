{
  "translations": [
    { "resource_id": 29, "text": "فرو کوبنده." },
    { "resource_id": 29, "text": "چیست (آن) فرو کوبنده؟" },
    { "resource_id": 29, "text": "و تو چه می‌دانی که (آن) فرو کوبنده چیست؟" },
    {
      "resource_id": 29,
      "text": "روزی‌که مردم مانند پروانه‌های پراکنده خواهند بود."
    },
    {
      "resource_id": 29,
      "text": "و گوه‌ها مانند پشم رنگین حلاجی شده خواهد بود."
    },
    {
      "resource_id": 29,
      "text": "پس اما هرکس که (در آن روز) کفۀ میزانش سنگین باشد."
    },
    {
      "resource_id": 29,
      "text": "در یک زندگی خشنود (و پسندیده‌ای) خواهد بود."
    },
    { "resource_id": 29, "text": "و اما هرکس که کفۀ میزانش سبک باشد." },
    { "resource_id": 29, "text": "پس (مسکن و) پناهگاهش هاویه است." },
    { "resource_id": 29, "text": "و تو چه دانی که آن (هاویه) چیست؟" },
    { "resource_id": 29, "text": "آتشی سوزان (و شعله‌ور) است." }
  ],
