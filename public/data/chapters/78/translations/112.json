{
  "translations": [
    { "resource_id": 112, "text": "Neyi soruşturup duruyorlar?" },
    { "resource_id": 112, "text": "Büyük haberi mi?" },
    { "resource_id": 112, "text": "Onlar ki, hakkında ihtilaf ediyorlar." },
    { "resource_id": 112, "text": "Hayır, yakında öğrenecekler." },
    { "resource_id": 112, "text": "Sonra, Hayır! Yakında öğrenecekler." },
    { "resource_id": 112, "text": "Yeri bir döşek kılmadık mı?" },
    { "resource_id": 112, "text": "Dağları da birer kazık." },
    { "resource_id": 112, "text": "Sizi de çift çift yarattık." },
    { "resource_id": 112, "text": "Uykunuzu dinlenme kıldık." },
    { "resource_id": 112, "text": "Geceyi örtü kıldık." },
    { "resource_id": 112, "text": "Gündüzü de geçimlik kıldık." },
    {
      "resource_id": 112,
      "text": "Üstünüze de sapasağlam yedi kat bina ettik."
    },
    { "resource_id": 112, "text": "Işık saçan bir de lamba yarattık." },
    {
      "resource_id": 112,
      "text": "Ve o sıkıştıranlardan/bulutlardan şarıl şarıl bir su indirdik."
    },
    {
      "resource_id": 112,
      "text": "Onunla taneler ve bitkiler çıkaralım diye."
    },
    {
      "resource_id": 112,
      "text": "Ve birbirine girmiş sarmaş dolaş bahçeler..."
    },
    {
      "resource_id": 112,
      "text": "Ayırım/fasl günü belirlenmiş bir vakittir."
    },
    {
      "resource_id": 112,
      "text": "Sur’a üflendiği gün bölük bölük geleceksiniz."
    },
    { "resource_id": 112, "text": "(O gün) gök açılıp, kapı kapı olmuştur." },
    { "resource_id": 112, "text": "Dağlar yürütülüp, serap olmuştur." },
    { "resource_id": 112, "text": "Cehennem de gözlemektedir." },
    { "resource_id": 112, "text": "Azgınların varacağı sığınak," },
    { "resource_id": 112, "text": "Orada çağlar boyu kalacaklardır." },
    {
      "resource_id": 112,
      "text": "Orada ne serinlik tadacaklar, ne de bir içecek."
    },
    { "resource_id": 112, "text": "Kaynar su ve irinden başka..." },
    { "resource_id": 112, "text": "Uygun bir ceza!" },
    { "resource_id": 112, "text": "Çünkü onlar, hesabı ummuyorlardı." },
    {
      "resource_id": 112,
      "text": "Ayetlerimizi yalanladıkça yalanlamışlardı."
    },
    { "resource_id": 112, "text": "Her şeyi bir kitapta sayıp yazmışızdır." },
    {
      "resource_id": 112,
      "text": "İşte, tadına bakın, size azaptan başka bir şey artırmayacağız."
    },
    { "resource_id": 112, "text": "Muttakiler için kurtuluş..." },
    { "resource_id": 112, "text": "Bahçeler ve bağlar," },
    { "resource_id": 112, "text": "Göğüsleri olgun, yaşıt kızlar," },
    { "resource_id": 112, "text": "Dolu dolu kadehler." },
    { "resource_id": 112, "text": "Orada boş ve yalan söz işitmezler." },
    {
      "resource_id": 112,
      "text": "(Bunlar) Rabbinden bir karşılık, bol bir bağıştır."
    },
    {
      "resource_id": 112,
      "text": "(Bunlar) göklerin, yerin ve ikisi arasında bulunanların Rabbindendir. O, Rahman'dır. Ona hitap etmeye güç yetiremezler."
    },
    {
      "resource_id": 112,
      "text": "Ruh/Cebrail ve meleklerin saf halinde durdukları gün, ancak Rahman’ın kendisine izin verdiği konuşabilir. O da doğruyu konuşur."
    },
    {
      "resource_id": 112,
      "text": "İşte bu, hak olan gündür. Dileyen Rabbine dönüş yolu tutar."
    },
    {
      "resource_id": 112,
      "text": "Biz, sizi yakın bir azap ile uyardık. Kişi o gün, elleri ile ne sunduğuna bakar. Kâfir olan da: \"Keşke toprak olsaydım!\" der."
    }
  ],
