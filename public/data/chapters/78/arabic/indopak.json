{
  "verses": [
    {
      "id": 5673,
      "verse_key": "78:1",
      "text_indopak": "عَمَّ يَتَسَآءَلُوۡنَ​ۚ‏"
    },
    {
      "id": 5674,
      "verse_key": "78:2",
      "text_indopak": "عَنِ النَّبَاِ الۡعَظِيۡمِۙ‏"
    },
    {
      "id": 5675,
      "verse_key": "78:3",
      "text_indopak": "الَّذِىۡ هُمۡ فِيۡهِ مُخۡتَلِفُوۡنَؕ‏"
    },
    {
      "id": 5676,
      "verse_key": "78:4",
      "text_indopak": "كَلَّا سَيَعۡلَمُوۡنَۙ‏"
    },
    {
      "id": 5677,
      "verse_key": "78:5",
      "text_indopak": "ثُمَّ كَلَّا سَيَعۡلَمُوۡنَ‏"
    },
    {
      "id": 5678,
      "verse_key": "78:6",
      "text_indopak": "اَلَمۡ نَجۡعَلِ الۡاَرۡضَ مِهٰدًا ۙ‏"
    },
    {
      "id": 5679,
      "verse_key": "78:7",
      "text_indopak": "وَّالۡجِبَالَ اَوۡتَادًا ۙ‏"
    },
    {
      "id": 5680,
      "verse_key": "78:8",
      "text_indopak": "وَّخَلَقۡنٰكُمۡ اَزۡوَاجًا ۙ‏"
    },
    {
      "id": 5681,
      "verse_key": "78:9",
      "text_indopak": "وَّجَعَلۡنَا نَوۡمَكُمۡ سُبَاتًا ۙ‏"
    },
    {
      "id": 5682,
      "verse_key": "78:10",
      "text_indopak": "وَّجَعَلۡنَا الَّيۡلَ لِبَاسًا ۙ‏"
    },
    {
      "id": 5683,
      "verse_key": "78:11",
      "text_indopak": "وَّجَعَلۡنَا النَّهَارَ مَعَاشًا‏"
    },
    {
      "id": 5684,
      "verse_key": "78:12",
      "text_indopak": "وَّبَنَيۡنَا فَوۡقَكُمۡ سَبۡعًا شِدَادًا ۙ‏"
    },
    {
      "id": 5685,
      "verse_key": "78:13",
      "text_indopak": "وَّ جَعَلۡنَا سِرَاجًا وَّهَّاجًا ۙ‏"
    },
    {
      "id": 5686,
      "verse_key": "78:14",
      "text_indopak": "وَّاَنۡزَلۡنَا مِنَ الۡمُعۡصِرٰتِ مَآءً ثَجَّاجًا ۙ‏"
    },
    {
      "id": 5687,
      "verse_key": "78:15",
      "text_indopak": "لِّـنُخۡرِجَ بِهٖ حَبًّا وَّنَبَاتًا ۙ‏"
    },
    {
      "id": 5688,
      "verse_key": "78:16",
      "text_indopak": "وَّجَنّٰتٍ اَلۡفَافًا ؕ‏"
    },
    {
      "id": 5689,
      "verse_key": "78:17",
      "text_indopak": "اِنَّ يَوۡمَ الۡفَصۡلِ كَانَ مِيۡقَاتًا ۙ‏"
    },
    {
      "id": 5690,
      "verse_key": "78:18",
      "text_indopak": "يَّوۡمَ يُنۡفَخُ فِى الصُّوۡرِ فَتَاۡتُوۡنَ اَفۡوَاجًا ۙ‏"
    },
    {
      "id": 5691,
      "verse_key": "78:19",
      "text_indopak": "وَّفُتِحَتِ السَّمَآءُ فَكَانَتۡ اَبۡوَابًا ۙ‏"
    },
    {
      "id": 5692,
      "verse_key": "78:20",
      "text_indopak": "وَّ سُيِّرَتِ الۡجِبَالُ فَكَانَتۡ سَرَابًا ؕ‏"
    },
    {
      "id": 5693,
      "verse_key": "78:21",
      "text_indopak": "اِنَّ جَهَنَّمَ كَانَتۡ مِرۡصَادًا ۙ‏"
    },
    {
      "id": 5694,
      "verse_key": "78:22",
      "text_indopak": "لِّلطّٰغِيۡنَ مَاٰبًا ۙ‏"
    },
    {
      "id": 5695,
      "verse_key": "78:23",
      "text_indopak": "لّٰبِثِيۡنَ فِيۡهَاۤ اَحۡقَابًا​ ۚ‏"
    },
    {
      "id": 5696,
      "verse_key": "78:24",
      "text_indopak": "لَا يَذُوۡقُوۡنَ فِيۡهَا بَرۡدًا وَّلَا شَرَابًا ۙ‏"
    },
    {
      "id": 5697,
      "verse_key": "78:25",
      "text_indopak": "اِلَّا حَمِيۡمًا وَّغَسَّاقًا ۙ‏"
    },
    {
      "id": 5698,
      "verse_key": "78:26",
      "text_indopak": "جَزَآءً وِّفَاقًا ؕ‏"
    },
    {
      "id": 5699,
      "verse_key": "78:27",
      "text_indopak": "اِنَّهُمۡ كَانُوۡا لَا يَرۡجُوۡنَ حِسَابًا ۙ‏"
    },
    {
      "id": 5700,
      "verse_key": "78:28",
      "text_indopak": "وَّكَذَّبُوۡا بِاٰيٰتِنَا كِذَّابًا ؕ‏"
    },
    {
      "id": 5701,
      "verse_key": "78:29",
      "text_indopak": "وَكُلَّ شَىۡءٍ اَحۡصَيۡنٰهُ كِتٰبًا ۙ‏"
    },
    {
      "id": 5702,
      "verse_key": "78:30",
      "text_indopak": "فَذُوۡقُوۡا فَلَنۡ نَّزِيۡدَكُمۡ اِلَّا عَذَابًا‏"
    },
    {
      "id": 5703,
      "verse_key": "78:31",
      "text_indopak": "اِنَّ لِلۡمُتَّقِيۡنَ مَفَازًا ۙ‏"
    },
    {
      "id": 5704,
      "verse_key": "78:32",
      "text_indopak": "حَدَآٮِٕقَ وَاَعۡنَابًا ۙ‏"
    },
    {
      "id": 5705,
      "verse_key": "78:33",
      "text_indopak": "وَّكَوَاعِبَ اَتۡرَابًا ۙ‏"
    },
    {
      "id": 5706,
      "verse_key": "78:34",
      "text_indopak": "وَّكَاۡسًا دِهَاقًا ؕ‏"
    },
    {
      "id": 5707,
      "verse_key": "78:35",
      "text_indopak": "لَا يَسۡمَعُوۡنَ فِيۡهَا لَـغۡوًا وَّلَا كِذّٰبًا​ ۚ‏"
    },
    {
      "id": 5708,
      "verse_key": "78:36",
      "text_indopak": "جَزَآءً مِّنۡ رَّبِّكَ عَطَآءً حِسَابًا ۙ‏"
    },
    {
      "id": 5709,
      "verse_key": "78:37",
      "text_indopak": "رَّبِّ السَّمٰوٰتِ وَالۡاَرۡضِ وَمَا بَيۡنَهُمَا الرَّحۡمٰنِ​ لَا يَمۡلِكُوۡنَ مِنۡهُ خِطَابًا​ ۚ‏"
    },
    {
      "id": 5710,
      "verse_key": "78:38",
      "text_indopak": "يَوۡمَ يَقُوۡمُ الرُّوۡحُ وَالۡمَلٰٓٮِٕكَةُ صَفًّا ؕۙ لَّا يَتَكَلَّمُوۡنَ اِلَّا مَنۡ اَذِنَ لَهُ الرَّحۡمٰنُ وَقَالَ صَوَابًا​‏"
    },
    {
      "id": 5711,
      "verse_key": "78:39",
      "text_indopak": "ذٰلِكَ الۡيَوۡمُ الۡحَـقُّ​ ۚ فَمَنۡ شَآءَ اتَّخَذَ اِلٰى رَبِّهٖ مَاٰبًا‏ ﻿﻿"
    },
    {
      "id": 5712,
      "verse_key": "78:40",
      "text_indopak": "اِنَّاۤ اَنۡذَرۡنٰـكُمۡ عَذَابًا قَرِيۡبًا ۖۚ  يَّوۡمَ يَنۡظُرُ الۡمَرۡءُ مَا قَدَّمَتۡ يَدٰهُ وَيَقُوۡلُ الۡـكٰفِرُ يٰلَيۡتَنِىۡ كُنۡتُ تُرٰبًا‏"
    }
  ],
  "meta": { "filters": { "chapter_number": "78" } }
}
