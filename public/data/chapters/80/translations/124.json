{
  "translations": [
    {
      "resource_id": 124,
      "text": "(Peygamber), ötürü yüzünü ekşitti ve geri döndü."
    },
    { "resource_id": 124, "text": "âmânın kendisine gelmesinden" },
    {
      "resource_id": 124,
      "text": "(Rasûlüm! Onun halini) sana kim bildirdi! Belki o temizlenecek"
    },
    {
      "resource_id": 124,
      "text": "yahut öğüt alacak da o öğüt ona fayda verecek."
    },
    { "resource_id": 124, "text": "Kendini (sana) muhtaç görmeyene gelince," },
    { "resource_id": 124, "text": "sen ona yöneliyorsun." },
    {
      "resource_id": 124,
      "text": "Oysa ki onun temizlenip arınmasından sen sorumlu değilsin."
    },
    { "resource_id": 124, "text": "Fakat koşarak ve sana gelenle de" },
    { "resource_id": 124, "text": "(Allah'tan) korkarak" },
    { "resource_id": 124, "text": "ilgilenmiyorsun." },
    {
      "resource_id": 124,
      "text": "Hayır, şüphesiz bunlar (ayetler ), bir öğüttür."
    },
    { "resource_id": 124, "text": "Dileyen ondan ( Kur'an'dan ) öğüt alır." },
    {
      "resource_id": 124,
      "text": "Tertemiz kılınmış mukaddes sahifelerde (yazılı)"
    },
    { "resource_id": 124, "text": "yüce makamlara kaldırılmış," },
    { "resource_id": 124, "text": "katiplerin elleriyle ( yazılıp )" },
    { "resource_id": 124, "text": "değerli ve itaatkar meleklerin." },
    { "resource_id": 124, "text": "Kahrolası insan! Ne inkârcıdır!" },
    { "resource_id": 124, "text": "Allah onu neden yarattı?" },
    {
      "resource_id": 124,
      "text": "Bir nutfeden (spermadan) yarattı da ona şekil verdi."
    },
    { "resource_id": 124, "text": "Sonra ona yolu kolaylaştırdı." },
    { "resource_id": 124, "text": "Sonra onun canını aldı ve kabre soktu." },
    {
      "resource_id": 124,
      "text": "Sonra dilediği bir vakitte onu yeniden diriltir."
    },
    {
      "resource_id": 124,
      "text": "Hayır! (İnsan) Allah'ın emrettiğini yapmadı."
    },
    { "resource_id": 124, "text": "İnsan, yediğine bir baksın!" },
    { "resource_id": 124, "text": "Şöyle ki: Yağmurlar yağdırdık." },
    { "resource_id": 124, "text": "Sonra toprağı göz göz yardık da" },
    { "resource_id": 124, "text": "oradan ekinler bitirdik." },
    { "resource_id": 124, "text": "Üzüm bağları, sebzeler," },
    { "resource_id": 124, "text": "zeytin ve hurma ağaçları," },
    { "resource_id": 124, "text": "iri ve sık ağaçlı bahçeler," },
    { "resource_id": 124, "text": "meyveler ve çayırlar." },
    {
      "resource_id": 124,
      "text": "(Bütün bunlar) sizi ve hayvanlarınızı yararlandırmak içindir."
    },
    { "resource_id": 124, "text": "Kulakları sağır eden o ses geldiğinde," },
    { "resource_id": 124, "text": "İşte o gün kişi kardeşinden kaçar." },
    { "resource_id": 124, "text": "Annesinden,  babasından," },
    { "resource_id": 124, "text": "eşinden ve çocuklarından." },
    {
      "resource_id": 124,
      "text": "O gün, herkesin kendine yetip artacak bir derdi vardır."
    },
    { "resource_id": 124, "text": "O gün bir takım yüzler parlak," },
    { "resource_id": 124, "text": "güleç ve sevinçlidir." },
    {
      "resource_id": 124,
      "text": "Yine o gün birtakım yüzleri de keder bürümüş,"
    },
    { "resource_id": 124, "text": "hüzünden kapkara kesilmiştir." },
    { "resource_id": 124, "text": "İşte bunlar kâfirlerdir, günahkârlardır." }
  ],
