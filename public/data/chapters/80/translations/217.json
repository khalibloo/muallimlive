{
  "translations": [
    { "resource_id": 217, "text": "Насупився та відвернувся він" },
    { "resource_id": 217, "text": "бо підійшов до нього сліпий" },
    {
      "resource_id": 217,
      "text": "А звідки тобі знати, можливо, очистився б він"
    },
    {
      "resource_id": 217,
      "text": "Чи запам’ятав би наставництво, і воно було б корисне йому"
    },
    { "resource_id": 217, "text": "А тому, хто багатий" },
    { "resource_id": 217, "text": "ти йому приділяєш увагу" },
    {
      "resource_id": 217,
      "text": "Хоча не тобі відповідати за те, що не очиститься він"
    },
    { "resource_id": 217, "text": "А хто приходить до тебе, поспішаючи" },
    { "resource_id": 217, "text": "та ще й з острахом" },
    { "resource_id": 217, "text": "то ти нехтуєш ним" },
    { "resource_id": 217, "text": "Та ж ні! Воістину, це — нагадування" },
    { "resource_id": 217, "text": "І хто бажає, той згадає його" },
    { "resource_id": 217, "text": "У сувоях шанованих" },
    { "resource_id": 217, "text": "піднесених і пречистих" },
    { "resource_id": 217, "text": "у руках писарів" },
    { "resource_id": 217, "text": "шляхетних і праведних" },
    { "resource_id": 217, "text": "Хай згине людина! Яка ж невдячна вона" },
    { "resource_id": 217, "text": "З чого створив Він її" },
    { "resource_id": 217, "text": "З краплі сім’я створив Він її та розмірив" },
    { "resource_id": 217, "text": "Потім полегшив Він шлях її" },
    { "resource_id": 217, "text": "згодом зробив її мертвою і поховав її" },
    { "resource_id": 217, "text": "потім, коли побажає, воскресить її" },
    {
      "resource_id": 217,
      "text": "Та ж ні! Не виконує вона того, що наказав Він їй"
    },
    { "resource_id": 217, "text": "Хай погляне людина на їжу свою" },
    { "resource_id": 217, "text": "Проливаємо Ми дощі зливами" },
    { "resource_id": 217, "text": "потім розколюємо Ми землю тріщинам" },
    { "resource_id": 217, "text": "і пророщуємо на ній зерно" },
    { "resource_id": 217, "text": "виноград і трави" },
    { "resource_id": 217, "text": "і оливи, і пальми" },
    { "resource_id": 217, "text": "і сади густі" },
    { "resource_id": 217, "text": "і плоди, і пасовиська" },
    { "resource_id": 217, "text": "на користь вам і худобі вашій" },
    { "resource_id": 217, "text": "І коли пролунає глас" },
    { "resource_id": 217, "text": "у День той чоловік покине свого брата" },
    { "resource_id": 217, "text": "і матір, і батька" },
    { "resource_id": 217, "text": "і дружину свою, і дітей своїх" },
    {
      "resource_id": 217,
      "text": "у кожної людини в той День своя справа, яка цілком захопить її"
    },
    { "resource_id": 217, "text": "Обличчя одних у той День будуть сяяти" },
    { "resource_id": 217, "text": "сміючись та радіючи" },
    { "resource_id": 217, "text": "а на обличчі інших у День той буде пил" },
    { "resource_id": 217, "text": "який вкриє їх чорнотою" },
    { "resource_id": 217, "text": "Оце вони — невіруючі нечестивці" }
  ],
