{
  "translations": [
    { "resource_id": 31, "text": "Malheur à tout calomniateur diffamateur," },
    { "resource_id": 31, "text": "qui amasse une fortune et la compte," },
    { "resource_id": 31, "text": "pensant que sa fortune l’immortalisera." },
    {
      "resource_id": 31,
      "text": "Mais non ! Il sera certes, jeté dans la Hutamah <sup foot_note=212600>1</sup>."
    },
    { "resource_id": 31, "text": "Et qui te dira ce qu’est la Hutamah ?" },
    { "resource_id": 31, "text": "Le Feu attisé d’Allah." },
    { "resource_id": 31, "text": "qui monte jusqu’aux cœurs." },
    { "resource_id": 31, "text": "Il se refermera sur eux," },
    { "resource_id": 31, "text": "en colonnes (de flammes) étendues." }
  ],
