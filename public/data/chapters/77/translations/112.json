{
  "translations": [
    {
      "resource_id": 112,
      "text": "Yemin olsun, birbiri ardınca gönderilenlere;"
    },
    { "resource_id": 112, "text": "Şiddetle esip savrulanlara;" },
    { "resource_id": 112, "text": "Yaydıkça yayanlara;" },
    { "resource_id": 112, "text": "Ayırdıkça ayıranlara;" },
    { "resource_id": 112, "text": "Zikri ulaştıranlara;" },
    { "resource_id": 112, "text": "Özür veya korkutmak için," },
    { "resource_id": 112, "text": "Size vadedilen elbette gerçekleşecektir." },
    { "resource_id": 112, "text": "Yıldızların ışığı söndüğü zaman;" },
    { "resource_id": 112, "text": "Gök yarıldığı;" },
    { "resource_id": 112, "text": "Dağlar un ufak savrulduğu zaman;" },
    { "resource_id": 112, "text": "Rasûller toplandığı zaman;" },
    { "resource_id": 112, "text": "Bu hangi güne ertelenmiş?" },
    { "resource_id": 112, "text": "Ayırma gününe." },
    { "resource_id": 112, "text": "Hüküm gününün ne olduğunu ne bilirsin?" },
    { "resource_id": 112, "text": "Vay haline o gün, yalanlayanların!" },
    { "resource_id": 112, "text": "Evvelkileri helak etmedik mi?" },
    {
      "resource_id": 112,
      "text": "Sonra arkadakileri de onların ardına takacağız."
    },
    { "resource_id": 112, "text": "İşte suçlulara böyle yaparız!" },
    { "resource_id": 112, "text": "Vay haline o gün, yalanlayanların!" },
    { "resource_id": 112, "text": "Sizi basit bir sudan yaratmadık mı?" },
    {
      "resource_id": 112,
      "text": "Ve suyu sağlam bir yere yerleştirmedik mi?"
    },
    { "resource_id": 112, "text": "Belli bir süreye kadar" },
    {
      "resource_id": 112,
      "text": "Buna gücümüz yetti. Ne güzel güç yetirenleriz"
    },
    { "resource_id": 112, "text": "Vay haline o gün, yalanlayanların!" },
    { "resource_id": 112, "text": "Yeryüzünü toplanma yeri kılmadık mı?" },
    { "resource_id": 112, "text": "Dirilere ve ölülere." },
    {
      "resource_id": 112,
      "text": "Orada yüksek dağlar yaratıp size tatlı su içirmedik mi?"
    },
    { "resource_id": 112, "text": "Vay haline o gün, yalanlayanların!" },
    { "resource_id": 112, "text": "Haydi yalanladığınıza yürüyün." },
    { "resource_id": 112, "text": "Yürüyün üç kollu (ateşin) gölgesine!" },
    { "resource_id": 112, "text": "Gölgelendirmez, alevden de korumaz." },
    { "resource_id": 112, "text": "O, köşk gibi kocaman kıvılcım saçar." },
    {
      "resource_id": 112,
      "text": "Her bir kıvılcım, sanki birer sarı deve gibidir."
    },
    { "resource_id": 112, "text": "Vay haline o gün, yalanlayanların!" },
    { "resource_id": 112, "text": "Bu, onların konuşamayacakları bir gündür" },
    { "resource_id": 112, "text": "Özür dilemeleri için onlara izin verilmez" },
    { "resource_id": 112, "text": "Vay haline o gün, yalanlayanların!" },
    {
      "resource_id": 112,
      "text": "Bu, ayırma günüdür Sizi ve evvelkileri bir araya toplarız"
    },
    {
      "resource_id": 112,
      "text": "Eğer bana karşı bir tuzağınız varsa, onu hemen kurun!"
    },
    { "resource_id": 112, "text": "Vay haline o gün, yalanlayanların!" },
    {
      "resource_id": 112,
      "text": "Allah’tan sakınanlar ise gölgeler içinde ve pınar başlarındadır."
    },
    { "resource_id": 112, "text": "Arzu ettikleri meyveler…" },
    {
      "resource_id": 112,
      "text": "Yaptıklarınıza karşılık afiyetle yiyin, için!"
    },
    {
      "resource_id": 112,
      "text": "Biz, iyilik yapanları işte böyle ödüllendiririz."
    },
    { "resource_id": 112, "text": "Yalanlayanların o gün vay haline!" },
    {
      "resource_id": 112,
      "text": "Yiyin ve azıcık faydalanın, nasılsa siz suçlusunuz!"
    },
    { "resource_id": 112, "text": "Vay haline o gün, yalanlayanların!" },
    {
      "resource_id": 112,
      "text": "Onlara, “Rükû edin!” denildiği zaman, rükû etmezlerdi."
    },
    { "resource_id": 112, "text": "Vay haline o gün, yalanlayanların!" },
    {
      "resource_id": 112,
      "text": "Onlar artık bundan (Kur'an'dan) sonra hangi söze iman edecekler?"
    }
  ],
  "meta": {
