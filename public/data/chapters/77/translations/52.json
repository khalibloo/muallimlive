{
  "translations": [
    { "resource_id": 52, "text": "Andolsun birbiri ardınca gönderilenlere," },
    { "resource_id": 52, "text": "Büküp devirenlere," },
    { "resource_id": 52, "text": "Yaydıkça yayanlara," },
    { "resource_id": 52, "text": "Seçip ayıranlara," },
    { "resource_id": 52, "text": "Bir öğüt bırakanlara," },
    { "resource_id": 52, "text": "Gerek özür için olsun, gerek uyarı için," },
    {
      "resource_id": 52,
      "text": "Herhalde size vaad olunan kesinlikle olacaktır."
    },
    { "resource_id": 52, "text": "Hani o yıldızlar silindiği zaman," },
    { "resource_id": 52, "text": "Gök yarıldığı zaman," },
    { "resource_id": 52, "text": "Dağlar savrulduğu zaman," },
    {
      "resource_id": 52,
      "text": "Elçiler, tayin edilen vakitlerine erdirildikleri zaman,"
    },
    { "resource_id": 52, "text": "Bunlar hangi güne ertelendiler?" },
    { "resource_id": 52, "text": "Hüküm gününe.." },
    { "resource_id": 52, "text": "Bildin mi, nedir o hüküm günü?" },
    { "resource_id": 52, "text": "O gün yalanlayanların vay haline!" },
    { "resource_id": 52, "text": "Biz, öncekileri helak etmedik mi?" },
    { "resource_id": 52, "text": "Sonra geridekileri de onlara katarız." },
    { "resource_id": 52, "text": "Biz suçlulara böyle yaparız." },
    { "resource_id": 52, "text": "O gün yalanlayanların vah haline!" },
    { "resource_id": 52, "text": "Biz sizi âdi bir sudan yaratmadık mı?" },
    { "resource_id": 52, "text": "Onu sağlam bir yerde oturttuk." },
    { "resource_id": 52, "text": "Belli bir süreye kadar." },
    {
      "resource_id": 52,
      "text": "Demek ki biçimlendirmişiz. Ne güzel biçimlendireniz biz."
    },
    { "resource_id": 52, "text": "O gün yalanlayanların vay haline!" },
    {
      "resource_id": 52,
      "text": "Yeryüzünü bir tokat (toplanma yeri) yapmadık mı?"
    },
    { "resource_id": 52, "text": "Gerek diriler, gerekse ölüler için." },
    {
      "resource_id": 52,
      "text": "Orada yüksek yüksek dağlar oturtup da size bir tatlı su sunmadık mı?"
    },
    { "resource_id": 52, "text": "O gün yalanlayanların vay haline!" },
    {
      "resource_id": 52,
      "text": "(Kıyameti yalanlayanlara şöyle denir): \"Haydin gidin o yalanladığınız şeye doğru.\""
    },
    {
      "resource_id": 52,
      "text": "\"Haydi gidin o üç çatallı gölgeye (cehenneme).\""
    },
    { "resource_id": 52, "text": "O, ne gölgelendirir, ne alevden korur." },
    { "resource_id": 52, "text": "O, saray gibi kıvılcımlar atar." },
    {
      "resource_id": 52,
      "text": "Sanki o kıvılcımlar, sarı sarı (erkek deve sürüleridir)."
    },
    { "resource_id": 52, "text": "O gün yalanlayanların vay haline!" },
    { "resource_id": 52, "text": "Bugün, konuşamıyacakları gündür." },
    {
      "resource_id": 52,
      "text": "Kendilerine izin de verilmez ki, özür beyan etsinler."
    },
    { "resource_id": 52, "text": "O gün yalanlayanların vay haline!" },
    {
      "resource_id": 52,
      "text": "Bu, işte o hüküm günüdür. Sizi ve öncekileri bir araya topladık."
    },
    { "resource_id": 52, "text": "Bir hileniz varsa beni atlatın." },
    { "resource_id": 52, "text": "O gün yalanlayanların vay haline!" },
    {
      "resource_id": 52,
      "text": "Kuşkusuz takva sahipleri gölgeler altında ve pınar başlarındadır."
    },
    {
      "resource_id": 52,
      "text": "Canlarının çektiğinden türlü meyveler arasındadırlar."
    },
    {
      "resource_id": 52,
      "text": "(Onlara): \"Yaptıklarınıza karşılık afiyetle yiyin, için\" (denir)."
    },
    {
      "resource_id": 52,
      "text": "İşte biz güzel amel işleyenleri böyle mükafatlandırırız."
    },
    { "resource_id": 52, "text": "O gün yalanlayanların vay haline!" },
    {
      "resource_id": 52,
      "text": "Yiyin, zevklenin biraz, çünkü siz suçlularsınız."
    },
    { "resource_id": 52, "text": "O gün yalanlayanların vay haline!" },
    {
      "resource_id": 52,
      "text": "Onlara: \"Rüku edin\" denildiği zaman etmezler."
    },
    { "resource_id": 52, "text": "Vay haline o gün yalanlayanların!" },
    {
      "resource_id": 52,
      "text": "Artık bundan (Kur'an'dan) sonra hangi söze inanacaklar?"
    }
  ],
