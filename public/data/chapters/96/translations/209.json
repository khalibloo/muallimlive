{
  "translations": [
    {
      "resource_id": 209,
      "text": "Leggi nel nome del tuo Dio, Colui che creò,"
    },
    { "resource_id": 209, "text": "creò l'uomo da un grumo!" },
    { "resource_id": 209, "text": "Leggi! E il tuo Dio è il più Generoso," },
    { "resource_id": 209, "text": "Colui che insegnò col calamo," },
    { "resource_id": 209, "text": "insegnò all'uomo ciò che non sapeva." },
    { "resource_id": 209, "text": "No! In verità l'uomo diventa prepotente," },
    { "resource_id": 209, "text": "vedendosi arricchito." },
    { "resource_id": 209, "text": "In verità al tuo Dio è il ritorno." },
    { "resource_id": 209, "text": "Hai visto chi dissuase" },
    { "resource_id": 209, "text": "un fedele che pregava?" },
    { "resource_id": 209, "text": "Hai visto se era sulla Retta Via" },
    { "resource_id": 209, "text": "o se invitava alla devozione?" },
    { "resource_id": 209, "text": "Hai visto se negava e rifiutava?" },
    { "resource_id": 209, "text": "Non sa che in verità Allāh vede?" },
    {
      "resource_id": 209,
      "text": "No! Se non smette, lo prenderemo per la fronte,"
    },
    { "resource_id": 209, "text": "la fronte bugiarda e sviata." },
    { "resource_id": 209, "text": "Chiami il suo gruppo," },
    { "resource_id": 209, "text": "e Noi chiameremo i Punitori dell'Inferno!" },
    {
      "resource_id": 209,
      "text": "No! Non gli obbedire e prostrati e avvicinati! ۩.وَاسْجُدْ وَاقْتَرِب"
    }
  ],
