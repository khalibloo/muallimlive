{
  "translations": [
    { "resource_id": 75, "text": "Günəş sarınacağı zaman;" },
    { "resource_id": 75, "text": " ulduzlar soluxub sönəcə­yi zaman;" },
    { "resource_id": 75, "text": " dağlar hərəkətə gətirilə­cə­yi zaman;" },
    {
      "resource_id": 75,
      "text": " boğaz dəvələr başlı-başı­na qala­caq­ları zaman;"
    },
    {
      "resource_id": 75,
      "text": " vəhşi heyvanlar bir yerə toplanacağı zaman;"
    },
    { "resource_id": 75, "text": " dənizlər alovlanacağı za­man;" },
    {
      "resource_id": 75,
      "text": " hər kəs öz tayına qo­vuş­durulacağı zaman;"
    },
    {
      "resource_id": 75,
      "text": " diri-diri torpağa basdırıl­mış qız uşağı soruşulacağı za­man –"
    },
    { "resource_id": 75, "text": " hansı günaha görə öldü­rül­müş­dür;" },
    { "resource_id": 75, "text": " səhifələr açılacağı zaman;" },
    { "resource_id": 75, "text": " göy qopardılacağı zaman;" },
    { "resource_id": 75, "text": " Cəhənnəm alovlandırı­la­cağı za­man" },
    {
      "resource_id": 75,
      "text": " və Cənnət möminlərə ya­xınlaşdı­rılacağı zaman;"
    },
    {
      "resource_id": 75,
      "text": " hər kəs bu gün üçün özü­nə nə tə­darük etdiyini bilə­cək­dir."
    },
    {
      "resource_id": 75,
      "text": " And içirəm gecə çıxıb gün­düz batan ulduzlara,"
    },
    { "resource_id": 75, "text": " seyrə çıxıb gizlənən səy­yarələrə," },
    { "resource_id": 75, "text": " qaralmaqda olan gecəyə," },
    { "resource_id": 75, "text": " və açılmaqda olan səhə­rə!" },
    {
      "resource_id": 75,
      "text": " Həqiqətən, bu, göndər­di­yimiz möh­tə­rəm bir elçinin sö­zü­dür."
    },
    {
      "resource_id": 75,
      "text": " O elçi ki, qüvvətlidir, Ər­şin sahibi yanında böyük hör­­mət sa­hi­bidir,"
    },
    { "resource_id": 75, "text": " orada itaət ediləndir, eti­barlı­dır." },
    { "resource_id": 75, "text": " Sizin dostunuz Muhəm­məd di­vanə deyil." },
    { "resource_id": 75, "text": " O, Cəbraili aydın üfüqdə gördü." },
    {
      "resource_id": 75,
      "text": " O, qeybdən gələn xəbərləri sizdən əsirgəyən de­yil."
    },
    {
      "resource_id": 75,
      "text": " Bu Quran daşqalaq olun­muş şey­tanın sözü də deyildir."
    },
    {
      "resource_id": 75,
      "text": " Elə isə ondan üz döndə­rib hara ge­dirsiniz?"
    },
    { "resource_id": 75, "text": " Bu, aləmlərə yalnız bir nəsihətdir –" },
    {
      "resource_id": 75,
      "text": " sizlərdən doğru yolda ol­maq istə­yənlər üçün."
    },
    {
      "resource_id": 75,
      "text": " Aləmlərin Rəbbi Allah istəmə­yincə, siz istəyə bilməz­siniz!"
    }
  ],
  "meta": {
    "translation_name": "Alikhan Musayev",
    "author_name": "Alikhan Musayev",
    "filters": { "resource_id": 75, "chapter_number": "81" }
  }
}
