{
  "verses": [
    {
      "id": 4847,
      "verse_key": "54:1",
      "text_imlaei_simple": "اقتربت الساعة وانشق القمر"
    },
    {
      "id": 4848,
      "verse_key": "54:2",
      "text_imlaei_simple": "وان يروا اية يعرضوا ويقولوا سحر مستمر"
    },
    {
      "id": 4849,
      "verse_key": "54:3",
      "text_imlaei_simple": "وكذبوا واتبعوا اهواءهم وكل امر مستقر"
    },
    {
      "id": 4850,
      "verse_key": "54:4",
      "text_imlaei_simple": "ولقد جاءهم من الانباء ما فيه مزدجر"
    },
    {
      "id": 4851,
      "verse_key": "54:5",
      "text_imlaei_simple": "حكمة بالغة فما تغن النذر"
    },
    {
      "id": 4852,
      "verse_key": "54:6",
      "text_imlaei_simple": "فتول عنهم يوم يدع الداع الى شيء نكر"
    },
    {
      "id": 4853,
      "verse_key": "54:7",
      "text_imlaei_simple": "خشعا ابصارهم يخرجون من الاجداث كانهم جراد منتشر"
    },
    {
      "id": 4854,
      "verse_key": "54:8",
      "text_imlaei_simple": "مهطعين الى الداع يقول الكافرون هذا يوم عسر"
    },
    {
      "id": 4855,
      "verse_key": "54:9",
      "text_imlaei_simple": "كذبت قبلهم قوم نوح فكذبوا عبدنا وقالوا مجنون وازدجر"
    },
    {
      "id": 4856,
      "verse_key": "54:10",
      "text_imlaei_simple": "فدعا ربه اني مغلوب فانتصر"
    },
    {
      "id": 4857,
      "verse_key": "54:11",
      "text_imlaei_simple": "ففتحنا ابواب السماء بماء منهمر"
    },
    {
      "id": 4858,
      "verse_key": "54:12",
      "text_imlaei_simple": "وفجرنا الارض عيونا فالتقى الماء على امر قد قدر"
    },
    {
      "id": 4859,
      "verse_key": "54:13",
      "text_imlaei_simple": "وحملناه على ذات الواح ودسر"
    },
    {
      "id": 4860,
      "verse_key": "54:14",
      "text_imlaei_simple": "تجري باعيننا جزاء لمن كان كفر"
    },
    {
      "id": 4861,
      "verse_key": "54:15",
      "text_imlaei_simple": "ولقد تركناها اية فهل من مدكر"
    },
    {
      "id": 4862,
      "verse_key": "54:16",
      "text_imlaei_simple": "فكيف كان عذابي ونذر"
    },
    {
      "id": 4863,
      "verse_key": "54:17",
      "text_imlaei_simple": "ولقد يسرنا القران للذكر فهل من مدكر"
    },
    {
      "id": 4864,
      "verse_key": "54:18",
      "text_imlaei_simple": "كذبت عاد فكيف كان عذابي ونذر"
    },
    {
      "id": 4865,
      "verse_key": "54:19",
      "text_imlaei_simple": "انا ارسلنا عليهم ريحا صرصرا في يوم نحس مستمر"
    },
    {
      "id": 4866,
      "verse_key": "54:20",
      "text_imlaei_simple": "تنزع الناس كانهم اعجاز نخل منقعر"
    },
    {
      "id": 4867,
      "verse_key": "54:21",
      "text_imlaei_simple": "فكيف كان عذابي ونذر"
    },
    {
      "id": 4868,
      "verse_key": "54:22",
      "text_imlaei_simple": "ولقد يسرنا القران للذكر فهل من مدكر"
    },
    {
      "id": 4869,
      "verse_key": "54:23",
      "text_imlaei_simple": "كذبت ثمود بالنذر"
    },
    {
      "id": 4870,
      "verse_key": "54:24",
      "text_imlaei_simple": "فقالوا ابشرا منا واحدا نتبعه انا اذا لفي ضلال وسعر"
    },
    {
      "id": 4871,
      "verse_key": "54:25",
      "text_imlaei_simple": "االقي الذكر عليه من بيننا بل هو كذاب اشر"
    },
    {
      "id": 4872,
      "verse_key": "54:26",
      "text_imlaei_simple": "سيعلمون غدا من الكذاب الاشر"
    },
    {
      "id": 4873,
      "verse_key": "54:27",
      "text_imlaei_simple": "انا مرسلو الناقة فتنة لهم فارتقبهم واصطبر"
    },
    {
      "id": 4874,
      "verse_key": "54:28",
      "text_imlaei_simple": "ونبئهم ان الماء قسمة بينهم كل شرب محتضر"
    },
    {
      "id": 4875,
      "verse_key": "54:29",
      "text_imlaei_simple": "فنادوا صاحبهم فتعاطى فعقر"
    },
    {
      "id": 4876,
      "verse_key": "54:30",
      "text_imlaei_simple": "فكيف كان عذابي ونذر"
    },
    {
      "id": 4877,
      "verse_key": "54:31",
      "text_imlaei_simple": "انا ارسلنا عليهم صيحة واحدة فكانوا كهشيم المحتظر"
    },
    {
      "id": 4878,
      "verse_key": "54:32",
      "text_imlaei_simple": "ولقد يسرنا القران للذكر فهل من مدكر"
    },
    {
      "id": 4879,
      "verse_key": "54:33",
      "text_imlaei_simple": "كذبت قوم لوط بالنذر"
    },
    {
      "id": 4880,
      "verse_key": "54:34",
      "text_imlaei_simple": "انا ارسلنا عليهم حاصبا الا ال لوط نجيناهم بسحر"
    },
    {
      "id": 4881,
      "verse_key": "54:35",
      "text_imlaei_simple": "نعمة من عندنا كذلك نجزي من شكر"
    },
    {
      "id": 4882,
      "verse_key": "54:36",
      "text_imlaei_simple": "ولقد انذرهم بطشتنا فتماروا بالنذر"
    },
    {
      "id": 4883,
      "verse_key": "54:37",
      "text_imlaei_simple": "ولقد راودوه عن ضيفه فطمسنا اعينهم فذوقوا عذابي ونذر"
    },
    {
      "id": 4884,
      "verse_key": "54:38",
      "text_imlaei_simple": "ولقد صبحهم بكرة عذاب مستقر"
    },
    {
      "id": 4885,
      "verse_key": "54:39",
      "text_imlaei_simple": "فذوقوا عذابي ونذر"
    },
    {
      "id": 4886,
      "verse_key": "54:40",
      "text_imlaei_simple": "ولقد يسرنا القران للذكر فهل من مدكر"
    },
    {
      "id": 4887,
      "verse_key": "54:41",
      "text_imlaei_simple": "ولقد جاء ال فرعون النذر"
    },
    {
      "id": 4888,
      "verse_key": "54:42",
      "text_imlaei_simple": "كذبوا باياتنا كلها فاخذناهم اخذ عزيز مقتدر"
    },
    {
      "id": 4889,
      "verse_key": "54:43",
      "text_imlaei_simple": "اكفاركم خير من اولئكم ام لكم براءة في الزبر"
    },
    {
      "id": 4890,
      "verse_key": "54:44",
      "text_imlaei_simple": "ام يقولون نحن جميع منتصر"
    },
    {
      "id": 4891,
      "verse_key": "54:45",
      "text_imlaei_simple": "سيهزم الجمع ويولون الدبر"
    },
    {
      "id": 4892,
      "verse_key": "54:46",
      "text_imlaei_simple": "بل الساعة موعدهم والساعة ادهى وامر"
    },
    {
      "id": 4893,
      "verse_key": "54:47",
      "text_imlaei_simple": "ان المجرمين في ضلال وسعر"
    },
    {
      "id": 4894,
      "verse_key": "54:48",
      "text_imlaei_simple": "يوم يسحبون في النار على وجوههم ذوقوا مس سقر"
    },
    {
      "id": 4895,
      "verse_key": "54:49",
      "text_imlaei_simple": "انا كل شيء خلقناه بقدر"
    },
    {
      "id": 4896,
      "verse_key": "54:50",
      "text_imlaei_simple": "وما امرنا الا واحدة كلمح بالبصر"
    },
    {
      "id": 4897,
      "verse_key": "54:51",
      "text_imlaei_simple": "ولقد اهلكنا اشياعكم فهل من مدكر"
    },
    {
      "id": 4898,
      "verse_key": "54:52",
      "text_imlaei_simple": "وكل شيء فعلوه في الزبر"
    },
    {
      "id": 4899,
      "verse_key": "54:53",
      "text_imlaei_simple": "وكل صغير وكبير مستطر"
    },
    {
      "id": 4900,
      "verse_key": "54:54",
      "text_imlaei_simple": "ان المتقين في جنات ونهر"
    },
    {
      "id": 4901,
      "verse_key": "54:55",
      "text_imlaei_simple": "في مقعد صدق عند مليك مقتدر"
    }
  ],
