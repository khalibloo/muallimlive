{
  "translations": [
    { "resource_id": 124, "text": "Kıyamet koptuğu zaman," },
    {
      "resource_id": 124,
      "text": "ki onun oluşunu yalanlayacak hiçbir kimse yoktur;"
    },
    { "resource_id": 124, "text": "O, alçaltıcı, yükselticidir." },
    { "resource_id": 124, "text": "Yer şiddetle sarsıldığı zaman," },
    { "resource_id": 124, "text": "Dağlar parçaladığı zaman," },
    { "resource_id": 124, "text": "dağılıp toz duman haline geldiği" },
    { "resource_id": 124, "text": "ve sizler de üç sınıf olduğunuz zaman," },
    { "resource_id": 124, "text": "sağdakiler, ne mutlu o sağdakilere!" },
    { "resource_id": 124, "text": "Soldakiler, ne bahtsızdırlar onlar!" },
    {
      "resource_id": 124,
      "text": "(Hayırda) önde olanlar, (ecirde de) öndedirler."
    },
    {
      "resource_id": 124,
      "text": "İşte bunlar, (Allah'a) en yakın olanlardır."
    },
    { "resource_id": 124, "text": "Naîm cennetlerinde." },
    { "resource_id": 124, "text": "(Onların) çoğu önceki ümmetlerden," },
    { "resource_id": 124, "text": "birazı da sonrakilerdendir." },
    { "resource_id": 124, "text": "Cevherlerle işlenmiş tahtlar üzerindedir," },
    { "resource_id": 124, "text": "karşılıklı olarak oturup yaslanırlar." },
    {
      "resource_id": 124,
      "text": "Çevrelerinde, (hizmet için) ölümsüz gençler dolaşır;"
    },
    {
      "resource_id": 124,
      "text": "Maîn çeşmesinden doldurulmuş testiler, ibrikler ve kadehlerle."
    },
    {
      "resource_id": 124,
      "text": "Bu şaraptan ne başları ağrıtılır, ne de akılları giderilir."
    },
    { "resource_id": 124, "text": "(Onlara) beğendikleri meyveler," },
    { "resource_id": 124, "text": "Canlarının çektiği kuş etleri," },
    { "resource_id": 124, "text": "iri gözlü huriler," },
    { "resource_id": 124, "text": "saklı  inciler gibi" },
    { "resource_id": 124, "text": "yaptıklarına karşılık olarak (verilir)." },
    {
      "resource_id": 124,
      "text": "Orada boş bir söz ve günaha sokan bir laf işitmezler."
    },
    { "resource_id": 124, "text": "Söylenen, yalnızca «selâm, selâm »dır." },
    {
      "resource_id": 124,
      "text": "Sağdakiler, ne mutlu o sağdakilere (amel defteri sağdan verilenlere)!"
    },
    { "resource_id": 124, "text": "Düzgün kiraz ağacı," },
    {
      "resource_id": 124,
      "text": "meyveleri salkım salkım dizili muz ağaçları,"
    },
    { "resource_id": 124, "text": "uzamış gölgeler," },
    { "resource_id": 124, "text": "çağlayarak akan sular," },
    { "resource_id": 124, "text": "sayısız meyveler içindedirler;" },
    { "resource_id": 124, "text": "Tükenmeyen ve yasaklanmayan," },
    { "resource_id": 124, "text": "ve kabartılmış döşekler üstündedirler." },
    {
      "resource_id": 124,
      "text": "Gerçekten biz hurileri apayrı biçimde yeni yarattık."
    },
    { "resource_id": 124, "text": "Onları, eşlerine bâkireler kıldık." },
    { "resource_id": 124, "text": "Düşkün ve yaşıt." },
    { "resource_id": 124, "text": "Bütün bunlar sağdakiler içindir." },
    { "resource_id": 124, "text": "Bunların birçoğu önceki ümmetlerdendir." },
    { "resource_id": 124, "text": "Birçoğu da sonrakilerdendir." },
    {
      "resource_id": 124,
      "text": "Soldakiler; ne yazık o soldakilere (amel defteri soldan verilenlere)!"
    },
    {
      "resource_id": 124,
      "text": "İçlerine işleyen bir ateş ve kaynar su içinde,"
    },
    { "resource_id": 124, "text": "kapkara dumandan bir gölge altındadırlar," },
    { "resource_id": 124, "text": "serin ve hoş olmayan." },
    {
      "resource_id": 124,
      "text": "Çünkü onlar bundan önce varlık içinde sefahete dalmışlardı."
    },
    {
      "resource_id": 124,
      "text": "Büyük günahı işlemekte direnir dururlardı."
    },
    {
      "resource_id": 124,
      "text": "Ve diyorlardı ki: Biz öldükten, toprak ve kemik yığını haline geldikten sonra, biz mi bir daha diriltileceğiz?"
    },
    { "resource_id": 124, "text": "Önceki atalarımız da mı?" },
    { "resource_id": 124, "text": "De ki: Hem öncekiler hem de sonrakiler," },
    {
      "resource_id": 124,
      "text": "belli bir günün belli vaktinde mutlaka toplanacaklardır! "
    },
    { "resource_id": 124, "text": "Sonra siz ey sapıklar, yalancılar!" },
    {
      "resource_id": 124,
      "text": "Elbette bir ağaçtan, zakkum ağacından yiyeceksiniz."
    },
    { "resource_id": 124, "text": "Karınlarınızı ondan dolduracaksınız." },
    { "resource_id": 124, "text": "Üstüne de kaynar sudan içeceksiniz." },
    {
      "resource_id": 124,
      "text": "Susamış develerin suya saldırışı gibi içeceksiniz."
    },
    {
      "resource_id": 124,
      "text": "İşte ceza gününde onlara sunulacak ziyafet budur!"
    },
    {
      "resource_id": 124,
      "text": "Sizi biz yarattık. Tasdik etmeniz gerekmez mi?"
    },
    {
      "resource_id": 124,
      "text": "Söyleyin öyleyse, (rahimlere) döktüğünüz meni nedir?"
    },
    {
      "resource_id": 124,
      "text": "Onu siz mi yaratıyorsunuz yoksa yaratan biz miyiz?"
    },
    {
      "resource_id": 124,
      "text": "Aranızda ölümü takdir eden biziz ve biz, önüne geçilebileceklerden değiliz."
    },
    {
      "resource_id": 124,
      "text": "Böylece sizin yerinize benzerlerinizi getirelim ve sizi bilmediğiniz bir âlemde tekrar var edelim diye (ölümü takdir ettik)."
    },
    {
      "resource_id": 124,
      "text": "Andolsun, ilk yaratılışı bildiniz. Düşünüp ibret almanız gerekmez mi?"
    },
    { "resource_id": 124, "text": "Şimdi bana, ektiğinizi haber verin." },
    {
      "resource_id": 124,
      "text": "Onu siz mi bitiriyorsunuz, yoksa bitiren biz miyiz?"
    },
    {
      "resource_id": 124,
      "text": "Dileseydik onu kuru bir çöp yapardık da şaşar kalırdınız."
    },
    { "resource_id": 124, "text": "«Doğrusu borç altına girdik." },
    {
      "resource_id": 124,
      "text": "Daha doğrusu, biz yoksul kaldık» (derdiniz)."
    },
    { "resource_id": 124, "text": "Ya içtiğiniz suya ne dersiniz?" },
    {
      "resource_id": 124,
      "text": "Buluttan onu siz mi indirdiniz, yoksa indiren biz miyiz?"
    },
    {
      "resource_id": 124,
      "text": "Dileseydik onu tuzlu yapardık. Şükretmeniz gerekmez mi?"
    },
    {
      "resource_id": 124,
      "text": "Söyleyin şimdi bana, tutuşturmakta olduğunuz ateşi,"
    },
    {
      "resource_id": 124,
      "text": "onun ağacını siz mi yarattınız, yoksa yaratan biz miyiz?"
    },
    {
      "resource_id": 124,
      "text": "Biz onu bir ibret ve çölden gelip geçenlerin istifadesi için yarattık."
    },
    { "resource_id": 124, "text": "Öyleyse Yüce Rabbinin adıyla tesbih et." },
    {
      "resource_id": 124,
      "text": "Hayır! Yıldızların yerlerine yemin ederim ki,"
    },
    {
      "resource_id": 124,
      "text": "Bilirseniz, gerçekten bu, büyük bir yemindir. "
    },
    { "resource_id": 124, "text": "Değerli bir Kur'an'dır." },
    { "resource_id": 124, "text": "Şüphesiz bu, korunmuş bir kitapta bulunan" },
    { "resource_id": 124, "text": "Ona ancak temizlenenler dokunabilir." },
    { "resource_id": 124, "text": "O, âlemlerin Rabbinden indirilmiştir." },
    { "resource_id": 124, "text": "Şimdi siz, bu sözü mü küçümsüyorsunuz?" },
    {
      "resource_id": 124,
      "text": "Allah’ın verdiği rızka karşı şükrü, onu yalanlamakla mı yerine getiriyorsunuz?"
    },
    { "resource_id": 124, "text": "Hele can boğaza dayandığı zaman," },
    { "resource_id": 124, "text": "O vakit siz bakar durursunuz." },
    {
      "resource_id": 124,
      "text": "(O anda) biz ona sizden daha yakınız, ama göremezsiniz."
    },
    { "resource_id": 124, "text": "Madem ki ceza görmeyecekmişsiniz," },
    {
      "resource_id": 124,
      "text": "Onu (canı) geri çevirsenize, şayet iddianızda doğru iseniz!"
    },
    {
      "resource_id": 124,
      "text": "Fakat (ölen kişi Allah'a) yakın olanlardan ise,"
    },
    {
      "resource_id": 124,
      "text": "ona rahatlık, güzel rızık ve Naîm cenneti vardır."
    },
    { "resource_id": 124, "text": "Eğer o sağdakilerden ise," },
    { "resource_id": 124, "text": "«Ey sağdaki! Sana selam olsun!»" },
    { "resource_id": 124, "text": "Ama yalanlayan sapıklardan ise," },
    {
      "resource_id": 124,
      "text": "İşte ona da kaynar sudan bir ziyafet vardır!"
    },
    { "resource_id": 124, "text": "Ve (onun sonu) cehenneme atılmaktır." },
    { "resource_id": 124, "text": "Şüphesiz ki bu, kesin gerçektir." },
    { "resource_id": 124, "text": "O halde Yüce Rabbinin adıyla tesbîh et." }
  ],
