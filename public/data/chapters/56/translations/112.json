{
  "translations": [
    { "resource_id": 112, "text": "Kıyamet koptuğu zaman." },
    {
      "resource_id": 112,
      "text": "Ki onun kopmasını yalanlayacak hiçbir kimse yoktur."
    },
    { "resource_id": 112, "text": "O, alçaltıcı, yükselticidir." },
    { "resource_id": 112, "text": "Yer sarsıldıkça," },
    { "resource_id": 112, "text": "Dağlar paramparça olduğu," },
    {
      "resource_id": 112,
      "text": "Derken toz toprak halinde dağılıp savrulduğu zaman,"
    },
    { "resource_id": 112, "text": "Ve sizler de üç sınıf olduğunuz zaman," },
    { "resource_id": 112, "text": "Sağdakiler, nedir o sağdakiler?" },
    { "resource_id": 112, "text": "Soldakiler, nedir o soldakiler?" },
    {
      "resource_id": 112,
      "text": "(Hayırda) önde olanlar, (derece olarak da) öndedirler."
    },
    { "resource_id": 112, "text": "İşte onlar, yakınlaştırılmış olanlardır." },
    { "resource_id": 112, "text": "Nimet Cennetlerindedir onlar." },
    { "resource_id": 112, "text": "Bir çoğu öncekilerden," },
    { "resource_id": 112, "text": "Birazı da sonrakilerden," },
    { "resource_id": 112, "text": "Süslenmiş tahtlar üzerinde," },
    {
      "resource_id": 112,
      "text": "Karşı karşıya oturup, arkalarına yaslanmışlardır."
    },
    {
      "resource_id": 112,
      "text": "Onların etrafında ölümsüz genç hizmetçiler dolaşır."
    },
    {
      "resource_id": 112,
      "text": "Kaynağından (doldurulmuş) testiler, ibrikler ve kadehler."
    },
    {
      "resource_id": 112,
      "text": "Bundan ne başlarını bir ağrı tutar, ne de akılları giderilir."
    },
    { "resource_id": 112, "text": "Beğendiklerinden meyveler," },
    { "resource_id": 112, "text": "Canlarının çektiği kuş etleri," },
    { "resource_id": 112, "text": "Ve iri gözlü huriler," },
    { "resource_id": 112, "text": "Sanki sedef içindeki inciler," },
    { "resource_id": 112, "text": "yaptıkları amellere karşılık (verilir)." },
    {
      "resource_id": 112,
      "text": "Orada boş ve günaha sokacak bir söz işitmezler."
    },
    { "resource_id": 112, "text": "Söylenen, yalnızca \"Selâm, selâm\"dır." },
    { "resource_id": 112, "text": "Sağdakiler, nedir o sağdakiler?" },
    { "resource_id": 112, "text": "Dikensiz çehri ağaçlarında," },
    { "resource_id": 112, "text": "Salkım salkım muz ağaçlarında," },
    { "resource_id": 112, "text": "Yayılmış gölgede," },
    { "resource_id": 112, "text": "Çağlayan sularda," },
    { "resource_id": 112, "text": "Meyveler içinde," },
    { "resource_id": 112, "text": "Bitip tükenmeyen ve yasaklanmayan" },
    { "resource_id": 112, "text": "Ve yüksek döşekler içindedirler." },
    {
      "resource_id": 112,
      "text": "Biz, o kadınları yeni bir yaratılışla yeniden yarattık."
    },
    { "resource_id": 112, "text": "Onları bakireler şeklinde yarattık." },
    { "resource_id": 112, "text": "Eşlerine düşkün ve yaşıt." },
    { "resource_id": 112, "text": "Sağ taraftakiler için," },
    { "resource_id": 112, "text": "Bir çoğu öncekilerden," },
    { "resource_id": 112, "text": "Çoğu da sonrakilerden…" },
    { "resource_id": 112, "text": "Soldakiler, nedir o soldakiler!" },
    {
      "resource_id": 112,
      "text": "İçlerine işleyen ateşin rüzgarı ve kaynar su içindedirler."
    },
    { "resource_id": 112, "text": "Simsiyah bir duman gölgesi içinde," },
    { "resource_id": 112, "text": "Serinlik yok, kerem yok." },
    {
      "resource_id": 112,
      "text": "Çünkü onlar, bundan önce (haramlar içinde) şımarmış kimselerdi."
    },
    { "resource_id": 112, "text": "Büyük günah üzerinde ısrar ediyorlardı" },
    {
      "resource_id": 112,
      "text": "Biz ölüp, toprak ve kemik olduktan sonra tekrar mı dirileceğiz? diyorlardı"
    },
    { "resource_id": 112, "text": "Daha önceki atalarımızda mı?" },
    { "resource_id": 112, "text": "De ki: Öncekiler de sonrakiler de…" },
    {
      "resource_id": 112,
      "text": "Belli bir günün, belli bir vaktinde bir araya getirileceksiniz."
    },
    { "resource_id": 112, "text": "Sonra siz ey sapıklar, yalanlayanlar!" },
    { "resource_id": 112, "text": "Elbette yiyeceksiniz zakkum ağacından!" },
    { "resource_id": 112, "text": "Karınlarınızı dolduracaksınız hep ondan!" },
    { "resource_id": 112, "text": "Üstüne içeceksiniz kaynar sudan!" },
    { "resource_id": 112, "text": "Susamış develerin içişi gibi içeceksiniz!" },
    { "resource_id": 112, "text": "Hesap günü onların ziyafeti budur" },
    {
      "resource_id": 112,
      "text": "Sizi biz yarattık! Gerekmez mi (tekrardan yaratılışı) tasdik etmeniz?"
    },
    {
      "resource_id": 112,
      "text": "Söyleyin öyleyse, (rahimlere) döktüğünüz meni nedir?"
    },
    {
      "resource_id": 112,
      "text": "Onu siz mi yaratıyorsunuz yoksa yaratan biz miyiz?"
    },
    {
      "resource_id": 112,
      "text": "Aranızda ölümü takdir eden biziz! Bizler aciz de değiliz."
    },
    {
      "resource_id": 112,
      "text": "Sizi benzerlerinizle değiştirmek ve sizi bilmediğiniz bir şekilde yeniden yaratmak hususunda…"
    },
    {
      "resource_id": 112,
      "text": "İlk yaratılışınızı biliyorsunuz, düşünmeniz gerekmez mi?"
    },
    { "resource_id": 112, "text": "Ektiğiniz şeyleri gördünüz mü?" },
    {
      "resource_id": 112,
      "text": "Onları bitiren siz misiniz yoksa biz mi bitiriyoruz?"
    },
    {
      "resource_id": 112,
      "text": "Dilersek, onu çör çöp yaparız da şaşırıp kalırsınız."
    },
    { "resource_id": 112, "text": "Muhakkak biz çok ziyandayız!" },
    { "resource_id": 112, "text": "Doğrusu biz mahrum bırakıldık, dersiniz." },
    { "resource_id": 112, "text": "İçtiğiniz suyu gördünüz mü?" },
    {
      "resource_id": 112,
      "text": "Onu buluttan siz mi indirdiniz yoksa indiren biz miyiz?"
    },
    {
      "resource_id": 112,
      "text": "İsteseydik onu tuzlu bir su yapardık; şükretmeniz gerekmez mi?"
    },
    { "resource_id": 112, "text": "Tutuşturduğunuz ateşi gördünüz mü?" },
    {
      "resource_id": 112,
      "text": "Onun ağacını siz mi yarattınız yoksa yaratan biz miyiz?"
    },
    {
      "resource_id": 112,
      "text": "Biz onu bir ibret ve gelip geçen yolcuların istifadesi için yarattık."
    },
    { "resource_id": 112, "text": "O halde yüce Rabbinin adını tesbih et!" },
    { "resource_id": 112, "text": "Yıldızların yerlerine yemin ederim ki!" },
    {
      "resource_id": 112,
      "text": "Şüphesiz bu, büyük bir yemindir, eğer bilirseniz."
    },
    { "resource_id": 112, "text": "Şüphesiz bu, değerli bir Kur'an'dır." },
    { "resource_id": 112, "text": "Gizli/korunmuş bir kitaptadır." },
    { "resource_id": 112, "text": "Ona ancak temizlenenler dokunabilir." },
    { "resource_id": 112, "text": "Alemlerin Rabbinden indirilmiştir." },
    { "resource_id": 112, "text": "Siz bu sözü mü hor görüyorsunuz?" },
    {
      "resource_id": 112,
      "text": "Onu yalanlayarak mı size verilen nimete şükür ediyorsunuz?"
    },
    { "resource_id": 112, "text": "Hele bir (ruh) boğaza gelmiş olmasın." },
    { "resource_id": 112, "text": "Siz, o zaman bakıp kalırsınız" },
    {
      "resource_id": 112,
      "text": "Biz, ona sizden daha yakınız, ama göremezsiniz."
    },
    {
      "resource_id": 112,
      "text": "Madem ki (tekrardan dirilip) ceza görmeyecekmişsiniz."
    },
    {
      "resource_id": 112,
      "text": "Onu (ruhu) geri çeviriniz. Doğru söyleyenlerden iseniz…"
    },
    {
      "resource_id": 112,
      "text": "Eğer o (ölen kişi), yakın kılınanlardan ise."
    },
    {
      "resource_id": 112,
      "text": "Ona rahatlık, güzel rızık ve Naim Cenneti vardır."
    },
    { "resource_id": 112, "text": "Eğer o, sağdakilerden ise." },
    { "resource_id": 112, "text": "Ey sağdaki! Sana selam olsun!" },
    {
      "resource_id": 112,
      "text": "Eğer o, yalanlayanlardan ve sapıklardan ise."
    },
    { "resource_id": 112, "text": "Kaynar suda bir ziyafet!" },
    { "resource_id": 112, "text": "Ve cehenneme atılış." },
    { "resource_id": 112, "text": "Bu, kesin olan hakkın ta kendisidir." },
    { "resource_id": 112, "text": "Öyleyse yüce Rabbinin adını tesbih et!" }
  ],
  "meta": {
