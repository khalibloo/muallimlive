{
  "translations": [
    { "resource_id": 52, "text": "Olacak vak'a olduğu zaman" },
    { "resource_id": 52, "text": "Onun oluşunu yalanlayacak kimse yoktur." },
    { "resource_id": 52, "text": "O, alçaltıcıdır, yükselticidir." },
    { "resource_id": 52, "text": "Yer şiddetle sarsıldığı" },
    { "resource_id": 52, "text": "Dağlar serpildikçe serpildiği" },
    { "resource_id": 52, "text": "Dağılıp toz duman haline geldiği" },
    { "resource_id": 52, "text": "Ve sizler üç sınıf olduğunuz zaman" },
    {
      "resource_id": 52,
      "text": "Sağın adamları (var ya) ne mutludurlar onlar!"
    },
    { "resource_id": 52, "text": "Solun adamları ise ne uğursuzdurlar onlar!" },
    { "resource_id": 52, "text": "Önde olanlar (var ya), onlar öncüdürler." },
    { "resource_id": 52, "text": "İşte o yaklaştırılanlar," },
    { "resource_id": 52, "text": "Nimet cennetlerindedirler." },
    { "resource_id": 52, "text": "Çoğu önceki ümmetlerden," },
    { "resource_id": 52, "text": "Birazı da sonrakilerden." },
    {
      "resource_id": 52,
      "text": "(Onlar) cevherlerle işlenmiş tahtlar üzerindedirler."
    },
    {
      "resource_id": 52,
      "text": "Karşılıklı olarak onların üzerinde yaslanırlar."
    },
    {
      "resource_id": 52,
      "text": "Çevrelerinde, ölümsüzlüğe ulaşmış gençler dolaşırlar."
    },
    {
      "resource_id": 52,
      "text": "Kaynağından doldurulmuş, testiler, ibrikler ve kadehlerle."
    },
    {
      "resource_id": 52,
      "text": "Ondan ne başları ağrıtılır, ne de akılları giderilir."
    },
    { "resource_id": 52, "text": "Beğendikleri meyvalar," },
    { "resource_id": 52, "text": "Canlarının çektiği kuş etleri," },
    { "resource_id": 52, "text": "İri gözlü hûriler," },
    { "resource_id": 52, "text": "Saklı inciler gibi," },
    { "resource_id": 52, "text": "Yaptıklarına karşılık olarak verilir." },
    {
      "resource_id": 52,
      "text": "Orada boş bir söz ve günaha sokan bir laf işitmezler."
    },
    {
      "resource_id": 52,
      "text": "Duydukları söz, yalnız \"selam\", \"selam\" dır."
    },
    { "resource_id": 52, "text": "Sağın adamları, nedir o sağın adamları!" },
    { "resource_id": 52, "text": "Dalbastı kirazlar," },
    { "resource_id": 52, "text": "Meyva dizili muzlar," },
    { "resource_id": 52, "text": "Uzamış gölgeler," },
    { "resource_id": 52, "text": "Fışkıran sular." },
    { "resource_id": 52, "text": "Pek çok meyva arasında," },
    { "resource_id": 52, "text": "Tükenmeyen ve yasaklanmayan" },
    { "resource_id": 52, "text": "Ve yükseltilmiş döşekler üstündedirler." },
    {
      "resource_id": 52,
      "text": "Biz kadınları yeniden inşa ettik (yarattık)."
    },
    { "resource_id": 52, "text": "Onları bâkireler yaptık." },
    { "resource_id": 52, "text": "Hep yaşıt sevgililer," },
    { "resource_id": 52, "text": "Sağın adamları içindir." },
    { "resource_id": 52, "text": "Bir çoğu öncekilerdendir." },
    { "resource_id": 52, "text": "Bir çoğu da sonrakilerdendir." },
    { "resource_id": 52, "text": "Solun adamları, nedir o solcular!" },
    {
      "resource_id": 52,
      "text": "İçlerine işleyen bir ateş ve kaynar şu içinde,"
    },
    { "resource_id": 52, "text": "Kapkara dumandan bir gölge altındadırlar." },
    { "resource_id": 52, "text": "Ki ne serindir, ne de faydalı." },
    {
      "resource_id": 52,
      "text": "Çünkü onlar bundan önce varlık içinde sefâhete dalmışlardı."
    },
    { "resource_id": 52, "text": "Büyük günahı işlemekte ısrar ediyorlardı." },
    {
      "resource_id": 52,
      "text": "Ve diyorlardı ki: \"Biz ölüp, toprak ve kemik yığını olduktan sonra, biz mi bir daha diriltileceğiz?\""
    },
    { "resource_id": 52, "text": "\"Önceki atalarımızda mı?\"" },
    { "resource_id": 52, "text": "De ki: \"Öncekiler ve sonrakiler\"" },
    {
      "resource_id": 52,
      "text": "\"Belli bir günün belli vaktinde mutlaka toplanacaklardır.\""
    },
    { "resource_id": 52, "text": "Sonra siz, ey sapık yalanlayıcılar!" },
    {
      "resource_id": 52,
      "text": "Elbette bir ağaçtan, zakkum ağacından yiyeceksiniz."
    },
    { "resource_id": 52, "text": "Karınlarınızı hep onunla dolduracaksınız." },
    { "resource_id": 52, "text": "Üstüne de kaynar su içeceksiniz." },
    {
      "resource_id": 52,
      "text": "Susuzluk illetine tutulmuş develerin içişi gibi içeceksiniz."
    },
    {
      "resource_id": 52,
      "text": "İşte ceza gününde onlara sunulacak ziyafet budur."
    },
    {
      "resource_id": 52,
      "text": "Biz sizi yarattık; tasdik etmeniz gerekmez mi?"
    },
    { "resource_id": 52, "text": "Attığınız meniyi gördünüz mü?" },
    {
      "resource_id": 52,
      "text": "Onu siz mi yaratıyorsunuz yoksa yaratan biz miyiz?"
    },
    {
      "resource_id": 52,
      "text": "Aranızda ölümü takdir eden biziz ve bizim önümüze geçilmez."
    },
    {
      "resource_id": 52,
      "text": "Böylece sizin yerinize benzerlerinizi getirelim ve sizi bilmediğiniz bir yaratılışta tekrar var edelim diye (böyle yapıyoruz)."
    },
    {
      "resource_id": 52,
      "text": "Andolsun, ilk yaratılışı bildiniz. Düşünüp ibret almanız gerekmez mi?"
    },
    { "resource_id": 52, "text": "Ektiğinizi gördünüz mü?" },
    {
      "resource_id": 52,
      "text": "Onu siz mi bitiriyorsunuz, yoksa bitiren biz miyiz?"
    },
    {
      "resource_id": 52,
      "text": "Dileseydik, onu kuru bir çöp yapardık. Hayret eder dururdunuz."
    },
    { "resource_id": 52, "text": "\"Doğrusu borç altına girdik.\"" },
    {
      "resource_id": 52,
      "text": "\"Doğrusu, biz yoksul bırakıldık\" (derdiniz)."
    },
    { "resource_id": 52, "text": "İçtiğiniz suya baktınız mı?" },
    {
      "resource_id": 52,
      "text": "Buluttan onu siz mi indirdiniz, yoksa indiren biz miyiz?"
    },
    {
      "resource_id": 52,
      "text": "Dileseydik onu tuzlu yapardık. O halde şükretseniz ya!"
    },
    { "resource_id": 52, "text": "Yaktığınız ateşi gördünüz mü?" },
    {
      "resource_id": 52,
      "text": "Onun ağacını siz mi yarattınız, yoksa yaratan biz miyiz?"
    },
    {
      "resource_id": 52,
      "text": "Biz onu bir ibret ve çölden gelip geçenlere bir fayda yaptık."
    },
    { "resource_id": 52, "text": "Öyleyse büyük Rabbinin adını yücelt." },
    { "resource_id": 52, "text": "Hayır, yıldızların yerlerine yemin ederim." },
    { "resource_id": 52, "text": "Bilirseniz bu büyük bir yemindir." },
    { "resource_id": 52, "text": "O, elbette şerefli bir Kur'ân'dır." },
    { "resource_id": 52, "text": "Korunmuş bir kitaptadır." },
    { "resource_id": 52, "text": "Ona temizlenenlerden başkası el süremez." },
    { "resource_id": 52, "text": "(O), âlemlerin Rabbinden indirilmiştir." },
    { "resource_id": 52, "text": "Şimdi siz bu sözü mü küçümsüyorsunuz?" },
    {
      "resource_id": 52,
      "text": "Rızkınızı, yalanlamanızdan ibaret mi kılıyorsunuz?"
    },
    { "resource_id": 52, "text": "Can boğaza dayandığı zaman" },
    {
      "resource_id": 52,
      "text": "Ki o zaman siz (ölmek üzere olana) bakar durursunuz."
    },
    {
      "resource_id": 52,
      "text": "Biz ona sizden daha yakınız, fakat siz görmezsiniz."
    },
    { "resource_id": 52, "text": "Eğer cezalandırılmayacak iseniz," },
    {
      "resource_id": 52,
      "text": "Onu geri çevirsenize; şayet iddianızda doğru iseniz."
    },
    {
      "resource_id": 52,
      "text": "Fakat ölen kişiye gelince, eğer o rahmete yaklaştırılanlardan ise,"
    },
    {
      "resource_id": 52,
      "text": "Ona rahatlık, güzel rızık ve Naîm cenneti vardır."
    },
    { "resource_id": 52, "text": "Eğer O, sağın adamlarından ise," },
    { "resource_id": 52, "text": "\"(Ey sağcı), sana sağcılardan selam!\"" },
    { "resource_id": 52, "text": "Ama yalanlayıcı sapıklardan ise;" },
    {
      "resource_id": 52,
      "text": "İşte ona da kaynar sudan bir ziyafet vardır."
    },
    { "resource_id": 52, "text": "Ve cehenneme atılma vardır." },
    { "resource_id": 52, "text": "Kesin gerçek budur işte." },
    { "resource_id": 52, "text": "Öyle ise Rabbini o büyük ismiyle tesbih et." }
  ],
  "meta": {
    "translation_name": "Elmalili Hamdi Yazir",
    "author_name": "Elmalili Hamdi Yazir\t",
