{
  "verses": [
    {
      "id": 5885,
      "verse_key": "84:1",
      "text_indopak": "اِذَا السَّمَآءُ انْشَقَّتۡۙ‏"
    },
    {
      "id": 5886,
      "verse_key": "84:2",
      "text_indopak": "وَاَذِنَتۡ لِرَبِّهَا وَحُقَّتۡۙ‏"
    },
    {
      "id": 5887,
      "verse_key": "84:3",
      "text_indopak": "وَاِذَا الۡاَرۡضُ مُدَّتۡؕ‏"
    },
    {
      "id": 5888,
      "verse_key": "84:4",
      "text_indopak": "وَاَلۡقَتۡ مَا فِيۡهَا وَتَخَلَّتۡۙ‏"
    },
    {
      "id": 5889,
      "verse_key": "84:5",
      "text_indopak": "وَاَذِنَتۡ لِرَبِّهَا وَحُقَّتۡؕ‏"
    },
    {
      "id": 5890,
      "verse_key": "84:6",
      "text_indopak": "يٰۤاَيُّهَا الۡاِنۡسَانُ اِنَّكَ كَادِحٌ اِلٰى رَبِّكَ كَدۡحًا فَمُلٰقِيۡهِ​ۚ‏ ﻿﻿"
    },
    {
      "id": 5891,
      "verse_key": "84:7",
      "text_indopak": "فَاَمَّا مَنۡ اُوۡتِىَ كِتٰبَهٗ بِيَمِيۡنِهٖۙ‏"
    },
    {
      "id": 5892,
      "verse_key": "84:8",
      "text_indopak": "فَسَوۡفَ يُحَاسَبُ حِسَابًا يَّسِيۡرًا ۙ‏"
    },
    {
      "id": 5893,
      "verse_key": "84:9",
      "text_indopak": "وَّيَنۡقَلِبُ اِلٰٓى اَهۡلِهٖ مَسۡرُوۡرًا ؕ‏"
    },
    {
      "id": 5894,
      "verse_key": "84:10",
      "text_indopak": "وَاَمَّا مَنۡ اُوۡتِىَ كِتٰبَهٗ وَرَآءَ ظَهۡرِهٖۙ‏"
    },
    {
      "id": 5895,
      "verse_key": "84:11",
      "text_indopak": "فَسَوۡفَ يَدۡعُوۡا ثُبُوۡرًا ۙ‏"
    },
    {
      "id": 5896,
      "verse_key": "84:12",
      "text_indopak": "وَّيَصۡلٰى سَعِيۡرًا ؕ‏"
    },
    {
      "id": 5897,
      "verse_key": "84:13",
      "text_indopak": "اِنَّهٗ كَانَ فِىۡۤ اَهۡلِهٖ مَسۡرُوۡرًا ؕ‏"
    },
    {
      "id": 5898,
      "verse_key": "84:14",
      "text_indopak": "اِنَّهٗ ظَنَّ اَنۡ لَّنۡ يَّحُوۡرَ ۛۚ‏"
    },
    {
      "id": 5899,
      "verse_key": "84:15",
      "text_indopak": "بَلٰٓى ۛۚ اِنَّ رَبَّهٗ كَانَ بِهٖ بَصِيۡرًا ؕ‏"
    },
    {
      "id": 5900,
      "verse_key": "84:16",
      "text_indopak": "فَلَاۤ اُقۡسِمُ بِالشَّفَقِۙ‏"
    },
    {
      "id": 5901,
      "verse_key": "84:17",
      "text_indopak": "وَالَّيۡلِ وَمَا وَسَقَۙ‏"
    },
    {
      "id": 5902,
      "verse_key": "84:18",
      "text_indopak": "وَالۡقَمَرِ اِذَا اتَّسَقَۙ‏"
    },
    {
      "id": 5903,
      "verse_key": "84:19",
      "text_indopak": "لَتَرۡكَبُنَّ طَبَقًا عَنۡ طَبَقٍؕ‏"
    },
    {
      "id": 5904,
      "verse_key": "84:20",
      "text_indopak": "فَمَا لَهُمۡ لَا يُؤۡمِنُوۡنَۙ‏"
    },
    {
      "id": 5905,
      "verse_key": "84:21",
      "text_indopak": "وَاِذَا قُرِئَ عَلَيۡهِمُ الۡقُرۡاٰنُ لَا يَسۡجُدُوۡنَ ؕ ۩‏"
    },
    {
      "id": 5906,
      "verse_key": "84:22",
      "text_indopak": "بَلِ الَّذِيۡنَ كَفَرُوۡا يُكَذِّبُوۡنَ ۖ‏"
    },
    {
      "id": 5907,
      "verse_key": "84:23",
      "text_indopak": "وَاللّٰهُ اَعۡلَمُ بِمَا يُوۡعُوۡنَ ۖ‏"
    },
    {
      "id": 5908,
      "verse_key": "84:24",
      "text_indopak": "فَبَشِّرۡهُمۡ بِعَذَابٍ اَلِيۡمٍۙ‏"
    },
    {
      "id": 5909,
      "verse_key": "84:25",
      "text_indopak": "اِلَّا الَّذِيۡنَ اٰمَنُوۡا وَعَمِلُوا الصّٰلِحٰتِ لَهُمۡ اَجۡرٌ غَيۡرُ مَمۡنُوۡنٍ‏ ﻿﻿"
    }
  ],
