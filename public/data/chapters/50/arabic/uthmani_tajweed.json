  "verses": [
    {
      "id": 4631,
      "verse_key": "50:1",
      "text_uthmani_tajweed": "<tajweed class=madda_necessary>قٓ</tajweed>‌ۚ وَ<tajweed class=ham_wasl>ٱ</tajweed>لْقُرْءَانِ <tajweed class=ham_wasl>ٱ</tajweed>لْمَج<tajweed class=madda_permissible>ِي</tajweed><tajweed class=qalaqah>د</tajweed>ِ <span class=end>١</span>"
    },
    {
      "id": 4632,
      "verse_key": "50:2",
      "text_uthmani_tajweed": "بَلْ عَجِب<tajweed class=madda_obligatory>ُوٓ</tajweed><tajweed class=slnt>اْ</tajweed> أَ<tajweed class=ikhafa>ن ج</tajweed><tajweed class=madda_obligatory>َا</tajweed>ٓءَه<tajweed class=idgham_shafawi>ُم م</tajweed>ُّ<tajweed class=ikhafa>نذ</tajweed>ِ<tajweed class=idgham_ghunnah>رٌ م</tajweed>ِّنْهُمْ فَقَالَ <tajweed class=ham_wasl>ٱ</tajweed>لْكَ<tajweed class=madda_normal>ـٰ</tajweed>فِرُونَ هَ<tajweed class=madda_normal>ـٰ</tajweed>ذَا شَىْءٌ عَج<tajweed class=madda_permissible>ِي</tajweed><tajweed class=qalaqah>ب</tajweed>ٌ <span class=end>٢</span>"
    },
    {
      "id": 4633,
      "verse_key": "50:3",
      "text_uthmani_tajweed": "أَءِذَا مِتْنَا وَكُ<tajweed class=ghunnah>نّ</tajweed>َا تُرَا<tajweed class=ikhafa>بًا‌ۖ ذ</tajweed><tajweed class=madda_normal>َٲ</tajweed>لِكَ رَ<tajweed class=qalaqah>جْ</tajweed><tajweed class=iqlab>عُۢ ب</tajweed>َع<tajweed class=madda_permissible>ِي</tajweed><tajweed class=qalaqah>د</tajweed>ٌ <span class=end>٣</span>"
    },
    {
      "id": 4634,
      "verse_key": "50:4",
      "text_uthmani_tajweed": "قَ<tajweed class=qalaqah>دْ</tajweed> عَلِمْنَا مَا تَ<tajweed class=ikhafa>نق</tajweed>ُصُ <tajweed class=ham_wasl>ٱ</tajweed>لْأَرْضُ مِنْهُمْ‌ۖ وَعِ<tajweed class=ikhafa>ند</tajweed>َنَا كِتَ<tajweed class=madda_normal>ـٰ</tajweed>بٌ حَف<tajweed class=madda_permissible>ِي</tajweed>ظُۢ <span class=end>٤</span>"
    },
    {
      "id": 4635,
      "verse_key": "50:5",
      "text_uthmani_tajweed": "بَلْ كَذَّبُو<tajweed class=slnt>اْ</tajweed> بِ<tajweed class=ham_wasl>ٱ</tajweed>لْحَقِّ لَ<tajweed class=ghunnah>مّ</tajweed>َا ج<tajweed class=madda_obligatory>َا</tajweed>ٓءَهُمْ فَهُمْ ف<tajweed class=madda_obligatory>ِىٓ</tajweed> أَمْ<tajweed class=idgham_ghunnah>رٍ م</tajweed>َّر<tajweed class=madda_permissible>ِي</tajweed><tajweed class=qalaqah>ج</tajweed>ٍ <span class=end>٥</span>"
