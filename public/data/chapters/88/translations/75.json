{
  "translations": [
    {
      "resource_id": 75,
      "text": " Aləmi Bürüyənin xəbəri sənə gəlib çatdımı?"
    },
    {
      "resource_id": 75,
      "text": " O gün neçə-neçə üzlər zə­lil olub yerə dikiləcək,"
    },
    { "resource_id": 75, "text": "üzülüb əldən düşəcək," },
    { "resource_id": 75, "text": "çox qızmar oda girəcək," },
    { "resource_id": 75, "text": " qaynar çeşmədən içirdi­lə­cək." },
    {
      "resource_id": 75,
      "text": " Onlara daridən başqa bir yemək verilməyəcək."
    },
    {
      "resource_id": 75,
      "text": " O onları nə doydurar, nə də aclıq­dan xilas edər."
    },
    { "resource_id": 75, "text": " O gün neçəsinin üzündə fərəh gö­rü­nəcək," },
    { "resource_id": 75, "text": " dünyadakı səylərindən məmnun qa­lacaq," },
    { "resource_id": 75, "text": "uca Cənnətdə olacaq," },
    { "resource_id": 75, "text": " orada faydasız söz eşit­məyə­cək­." },
    { "resource_id": 75, "text": " Orada axar çeşmələr var­dır;" },
    { "resource_id": 75, "text": "Orada hündür taxtlar," },
    { "resource_id": 75, "text": "düzülmüş piyalələr," },
    { "resource_id": 75, "text": " yan-yana qoyulmuş yas­tıqlar," },
    { "resource_id": 75, "text": " və döşəmələrə sərilmiş xal­çalar var." },
    {
      "resource_id": 75,
      "text": " Məgər onlar dəvənin ne­cə ya­ra­dıldığını görmürlər?"
    },
    { "resource_id": 75, "text": " Göyün necə yüksəl­diyi­ni gör­mür­lər?" },
    { "resource_id": 75, "text": " Dağların necə sancıldı­ğı­nı gör­mürlər?" },
    { "resource_id": 75, "text": " Yerin necə döşədildiyini gör­mürlər?" },
    {
      "resource_id": 75,
      "text": " Onlara nəsihət ver! Sən yalnız nəsihətçisən."
    },
    { "resource_id": 75, "text": " Sən onların üstündə hökm­dar deyilsən." },
    { "resource_id": 75, "text": " Lakin üz döndərib küfr edəni," },
    { "resource_id": 75, "text": " Allah ən şiddətli əzabla cəza­lan­dırar." },
    { "resource_id": 75, "text": " Şübhəsiz ki, onların dö­nüşü Bi­zədir." },
    {
      "resource_id": 75,
      "text": " Sonra onları sorğu-suala çəkmək də Bizə aiddir."
    }
  ],
  "meta": {
